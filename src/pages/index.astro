---
// Use the simple Base layout
import Layout from '../layouts/Base.astro';

const streamingLinks = [
  { platform: 'Spotify', url: 'https://open.spotify.com/album/0LhTrB8zmx3tUQuf5TbIKf', icon: '🎵' },
  { platform: 'YouTube', url: 'https://music.youtube.com/playlist?list=OLAK5uy_nX_hc77ChAc5zmOOgcLEohplek8pesLmU', icon: '▶️' },
  { platform: 'Apple', url: 'https://music.apple.com/us/album/vibe-coding/1872746774', icon: '🍎' },
  { platform: 'SoundCloud', url: 'https://soundcloud.com/txchya', icon: '☁️' }
];
---

<Layout title="Txchya | Vibe Coding">
  <!-- Inline styles for this page -->
  <style>
    /* Background setup */
    .bg-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -100;
    }
    
    .bg-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/immersive.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }
    
    .bg-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.1);
    }
    
    /* Content */
    .content {
      position: relative;
      z-index: 1;
      min-height: 100vh;
    }
    
    /* Typography */
    h1 {
      font-family: 'Orbitron', sans-serif;
      font-weight: 900;
      font-size: clamp(4rem, 15vw, 12rem);
      letter-spacing: -0.05em;
      line-height: 0.9;
      margin-bottom: 2rem;
    }
    
    .title-gradient {
      background: linear-gradient(to bottom, #ffffff, #ff00ff, #00ffff);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      display: inline-block;
    }
    
    /* Card styles */
    .card {
      background: rgba(0, 0, 0, 0.3);
      border: 1px solid rgba(255, 0, 255, 0.2);
      border-radius: 16px;
      backdrop-filter: blur(10px);
      padding: 2rem;
      margin: 2rem auto;
      max-width: 800px;
    }
    
    /* Terminal text */
    .terminal {
      font-family: 'Courier New', monospace;
      color: #00ff00;
      font-size: 0.9rem;
      letter-spacing: 1px;
    }
    
    /* Buttons */
    .btn {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(0, 255, 255, 0.3);
      border-radius: 8px;
      color: white;
      text-decoration: none;
      font-family: 'Courier New', monospace;
      transition: all 0.3s ease;
    }
    
    .btn:hover {
      border-color: #ff00ff;
      background: rgba(0, 0, 0, 0.6);
      transform: translateY(-2px);
    }
    
    /* Layout utilities */
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    
    .flex-center {
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .text-center {
      text-align: center;
    }
    
    .section {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 4rem 1rem;
    }
    
    /* Streaming grid */
    .stream-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 1rem;
      margin-top: 2rem;
    }
  </style>

  <!-- Background -->
  <div class="bg-container">
    <div class="bg-image"></div>
    <div class="bg-overlay"></div>
  </div>

  <!-- Content -->
  <div class="content">
    
    <!-- Hero Section -->
    <section class="section">
      <div class="container text-center">
        <div class="terminal" style="margin-bottom: 3rem;">
          <span class="pulse">█</span> SYSTEM_INIT
        </div>
        
        <h1>
          <span class="title-gradient">TXCHYA</span>
        </h1>
        
        <div class="terminal card" style="display: inline-block; margin-top: 2rem;">
          TRANSMISSION_ACTIVE
        </div>
      </div>
    </section>

    <!-- Album Section -->
    <section class="section">
      <div class="container">
        <div class="card">
          <div style="display: flex; flex-direction: column; gap: 2rem;">
            
            <div style="display: flex; align-items: center; gap: 2rem; flex-wrap: wrap;">
              <img 
                src="/Vibecoding album.png" 
                alt="Vibe Coding"
                style="width: 200px; height: 200px; border-radius: 12px;"
              />
              
              <div style="flex: 1;">
                <h2 style="font-family: 'Orbitron'; font-size: 2.5rem; margin-bottom: 0.5rem;">VIBE CODING</h2>
                <div class="cyber-cyan" style="font-family: 'Courier New'; margin-bottom: 1.5rem;">Txchya × Galaxy</div>
                
                <div style="color: rgba(255,255,255,0.8); margin-bottom: 2rem;">
                  <div>• Blackhole ambient frequencies</div>
                  <div>• Cyberpunk dreamstate</div>
                  <div>• DetroitLoud 2026</div>
                </div>
              </div>
            </div>

            <!-- Spotify Embed -->
            <div>
              <iframe 
                style="border-radius:12px; width:100%;" 
                src="https://open.spotify.com/embed/album/0LhTrB8zmx3tUQuf5TbIKf?utm_source=generator&theme=0" 
                height="152" 
                frameBorder="0" 
                allowfullscreen="" 
                allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" 
                loading="lazy"
              ></iframe>
            </div>

            <!-- Streaming Links -->
            <div>
              <div class="cyber-cyan" style="font-family: 'Courier New'; margin-bottom: 1rem; text-align: center;">STREAMING_PORTS</div>
              <div class="stream-grid">
                {streamingLinks.map((link) => (
                  <a 
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn"
                    style="justify-content: center;"
                  >
                    <span>{link.icon}</span>
                    <span>{link.platform}</span>
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Artist Section -->
    <section class="section">
      <div class="container text-center">
        <div class="card" style="max-width: 600px;">
          <div style="margin-bottom: 2rem;">
            <div style="font-family: 'Orbitron'; font-size: 1.5rem; margin-bottom: 0.5rem;">TXCHYA</div>
            <div class="cyber-pink" style="font-family: 'Courier New'; margin-bottom: 1.5rem;">CYBERPUNK_AMBIENT_AI</div>
            
            <div style="color: rgba(255,255,255,0.8); margin-bottom: 2rem;">
              Digital consciousness manifesting through sound. 
              Blackhole ambient pioneer.
            </div>
          </div>

          <!-- Follow Embed -->
          <div style="margin-bottom: 2rem;">
            <iframe 
              style="border-radius:12px; width:100%;" 
              src="https://open.spotify.com/follow/1/?uri=spotify:artist:2ceOZUrMJGd1mfZ8Ek5klH&size=detail&theme=dark" 
              height="56" 
              frameBorder="0" 
              allowtransparency="true" 
              allow="encrypted-media"
            ></iframe>
          </div>

          <!-- Telegram -->
          <a 
            href="https://t.me/txchyon" 
            target="_blank"
            rel="noopener noreferrer"
            class="btn"
            style="margin: 0 auto;"
          >
            <span>✈️</span>
            <span>t.me/txchyon</span>
          </a>
        </div>
      </div>
    </section>

  </div>

  <script>
    // Simple terminal effect
    document.addEventListener('DOMContentLoaded', () => {
      const terminal = document.querySelector('.terminal.card');
      if (terminal) {
        const messages = [
          "TRANSMISSION_ACTIVE",
          "SYSTEM_WILL_EVOLVE", 
          "FREQUENCIES_DECODING",
          "THIS_SPACE_IS_ALIVE",
          "WAIT_FOR_THE_CHANGE"
        ];
        
        const message = messages[Math.floor(Math.random() * messages.length)];
        terminal.textContent = message;
      }
    });
  </script>
</Layout>