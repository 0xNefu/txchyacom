          <div class="bg-black/60 backdrop-blur-sm rounded-2xl p-6 border border-gray-700 text-center transform hover:scale-105 transition-transform">
            <div class="text-4xl text-cyber-pink mb-3">2026</div>
            <h3 class="text-lg font-bold mb-2">RELEASE</h3>
            <p class="text-gray-300 text-sm">Future sounds</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- 🚀 FINAL CTA with txchya4.jpg -->
  <section class="py-20 relative overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src={backgrounds.cta} 
        alt="Final CTA Background"
        class="absolute inset-0 w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-black/90"></div>
      <div class="absolute inset-0 bg-gradient-to-r from-cyber-cyan/30 via-transparent to-cyber-pink/30"></div>
      <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-cyber-pink/10 rounded-full blur-3xl animate-pulse-slow"></div>
      <div class="absolute bottom-1/3 right-1/4 w-80 h-80 bg-cyber-cyan/10 rounded-full blur-3xl animate-pulse-slow delay-1000"></div>
    </div>
    
    <div class="container relative z-10 mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="bg-gradient-to-r from-black/60 to-purple-900/60 backdrop-blur-xl rounded-2xl border border-cyber-pink/30 p-12 text-center">
