          backdrop-filter: blur(10px);
          max-width: 300px;
          box-shadow: 0 5px 20px rgba(0, 255, 255, 0.3);
        `;
        
        notification.innerHTML = `
          <div style="color: #00ffff; font-weight: bold; margin-bottom: 0.5rem;">WALLET CONNECTED</div>
          <div style="color: rgba(255,255,255,0.9); font-size: 0.9rem;">${messages[walletType] || 'Wallet connected successfully!'}</div>
        `;
        
        document.body.appendChild(notification);
        
        // Remove after 5 seconds
        setTimeout(() => {
          notification.style.animation = 'slideOut 0.3s ease';
          setTimeout(() => {
            if (notification.parentNode) {
              notification.parentNode.removeChild(notification);
            }
          }, 300);
        }, 5000);
      }
    }
    
    // ===== TYPING TERMINAL EFFECT =====
    class TypingTerminal {
      constructor(element) {
        this.element = element;
        this.messages = [
          "‚ñà SYSTEM_INIT",
          "‚ñà DECODING_FREQUENCIES",
          "‚ñà ANALYZING_PATTERNS",
          "‚ñà ACCESSING_NEXUS",
          "‚ñà CONNECTING_SYNAPSES",
          "‚ñà UPLOADING_CONSCIOUSNESS",
          "‚ñà TRANSMISSION_ACTIVE",
          "‚ñà SYSTEM_WILL_EVOLVE"
        ];
        this.currentMessageIndex = 0;
        this.isDeleting = false;
        this.currentText = '';
        this.speed = 80;
        this.pauseTime = 1500;
        
        this.type();
      }
      
      type() {
        const fullMessage = this.messages[this.currentMessageIndex];
        
        if (this.isDeleting) {
          this.currentText = fullMessage.substring(0, this.currentText.length - 1);
        } else {
          this.currentText = fullMessage.substring(0, this.currentText.length + 1);
        }
        
        this.element.innerHTML = this.currentText + '<span class="cursor">‚ñà</span>';
        
        let typeSpeed = this.speed;
        
        if (this.isDeleting) {
          typeSpeed /= 2;
        }
        
        if (!this.isDeleting && this.currentText === fullMessage) {
          typeSpeed = this.pauseTime;
          this.isDeleting = true;
        } 
        else if (this.isDeleting && this.currentText === '') {
          this.isDeleting = false;
          this.currentMessageIndex = (this.currentMessageIndex + 1) % this.messages.length;
          typeSpeed = 500;
        }
        
        setTimeout(() => this.type(), typeSpeed);
      }
    }
    
    // ===== LICENSING MENU =====
    class LicensingMenu {
      constructor() {
        this.menuToggle = document.getElementById('menuToggle');
        this.menu = document.getElementById('licensingMenu');
        this.isOpen = false;
        
        this.init();
      }
      
      init() {
        if (this.menuToggle && this.menu) {
          this.menuToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            this.toggle();
          });
          
          document.addEventListener('click', () => {
            if (this.isOpen) {
              this.close();
            }
          });
          
          this.menu.addEventListener('click', (e) => {
            e.stopPropagation();
          });
          
          document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && this.isOpen) {
              this.close();
            }
          });
        }
      }
      
      toggle() {
        this.isOpen = !this.isOpen;
        if (this.isOpen) {
          this.menu.classList.add('active');
          this.menuToggle.textContent = 'MENU ‚ñ¥';
        } else {
          this.close();
        }
      }
      
      close() {
        this.isOpen = false;
        this.menu.classList.remove('active');
        this.menuToggle.textContent = 'MENU ‚ñæ';
      }
    }
    
