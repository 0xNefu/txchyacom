    // ===== TYPING TERMINAL EFFECT =====
    class TypingTerminal {
      constructor(element) {
        this.element = element;
        this.messages = [
          "█ SYSTEM_INIT",
          "█ DECODING_FREQUENCIES",
          "█ ANALYZING_PATTERNS",
          "█ ACCESSING_NEXUS",
          "█ CONNECTING_SYNAPSES",
          "█ UPLOADING_CONSCIOUSNESS",
          "█ TRANSMISSION_ACTIVE",
          "█ SYSTEM_WILL_EVOLVE"
        ];
        this.currentMessageIndex = 0;
        this.isDeleting = false;
        this.currentText = '';
        this.speed = 80; // typing speed
        this.pauseTime = 1500; // pause between messages
        
        this.type();
      }
      
      type() {
        const fullMessage = this.messages[this.currentMessageIndex];
        
        if (this.isDeleting) {
          // Backspace effect
          this.currentText = fullMessage.substring(0, this.currentText.length - 1);
        } else {
          // Typing forward
          this.currentText = fullMessage.substring(0, this.currentText.length + 1);
        }
        
        // Update element
        this.element.innerHTML = this.currentText + '<span class="cursor">█</span>';
        
        let typeSpeed = this.speed;
        
        if (this.isDeleting) {
          typeSpeed /= 2; // faster backspacing
        }
        
        // If message is complete
        if (!this.isDeleting && this.currentText === fullMessage) {
          typeSpeed = this.pauseTime;
          this.isDeleting = true;
        } 
        // If message is deleted
        else if (this.isDeleting && this.currentText === '') {
          this.isDeleting = false;
          this.currentMessageIndex = (this.currentMessageIndex + 1) % this.messages.length;
          typeSpeed = 500; // pause before next message
        }
        
        setTimeout(() => this.type(), typeSpeed);
      }
    }
    
    // ===== LICENSING MENU =====
    class LicensingMenu {
      constructor() {
        this.menuToggle = document.getElementById('menuToggle');
        this.menu = document.getElementById('licensingMenu');
        this.isOpen = false;
        
        this.init();
      }
      
      init() {
        if (this.menuToggle && this.menu) {
          // Toggle menu
          this.menuToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            this.toggle();
          });
          
          // Close menu when clicking outside
          document.addEventListener('click', () => {
            if (this.isOpen) {
              this.close();
            }
          });
          
          // Prevent menu from closing when clicking inside
          this.menu.addEventListener('click', (e) => {
            e.stopPropagation();
          });
          
          // Close menu with Escape key
          document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && this.isOpen) {
              this.close();
            }
          });
        }
      }
      
      toggle() {
        this.isOpen = !this.isOpen;
        if (this.isOpen) {
          this.menu.classList.add('active');
          this.menuToggle.textContent = 'MENU ▴';
        } else {
          this.close();
        }
      }
      
      close() {
        this.isOpen = false;
        this.menu.classList.remove('active');
        this.menuToggle.textContent = 'MENU ▾';
      }
    }
    
    // ===== INITIALIZE EVERYTHING =====
    document.addEventListener('DOMContentLoaded', () => {
      // Initialize typing terminal
      const terminalElement = document.getElementById('typingTerminal');
      if (terminalElement) {
        new TypingTerminal(terminalElement);
      }
      
      // Initialize licensing menu
      new LicensingMenu();
      
      // Random terminal message (existing)
      const terminal = document.querySelector('.terminal.card');
      if (terminal) {
        const messages = [
          "TRANSMISSION_ACTIVE",
          "SYSTEM_WILL_EVOLVE", 
          "FREQUENCIES_DECODING",
          "THIS_SPACE_IS_ALIVE",
          "WAIT_FOR_THE_CHANGE"
        ];
        
        const message = messages[Math.floor(Math.random() * messages.length)];
        terminal.textContent = message;
      }
      
      // Wallet Modal Functionality (existing)
      const connectWalletBtn = document.getElementById('connectWalletBtn');
      const closeModalBtn = document.getElementById('closeModal');
      const walletModal = document.getElementById('walletModal');
      const walletOptions = document.querySelectorAll('.wallet-option');
      
      // Open modal
      if (connectWalletBtn) {
        connectWalletBtn.addEventListener('click', () => {
          walletModal.classList.add('active');
        });
      }
      
      // Close modal
      if (closeModalBtn) {
        closeModalBtn.addEventListener('click', () => {
          walletModal.classList.remove('active');
        });
      }
      
      // Close modal when clicking outside
      if (walletModal) {
        walletModal.addEventListener('click', (e) => {
          if (e.target === walletModal) {
            walletModal.classList.remove('active');
          }
        });
      }
      
      // Wallet option click handlers
      walletOptions.forEach(option => {
        option.addEventListener('click', () => {
          // Add click animation
          option.style.transform = 'scale(0.95)';
          option.style.background = 'rgba(0, 255, 255, 0.1)';
          
          setTimeout(() => {
            option.style.transform = '';
            option.style.background = '';
            
            // Show success message
            alert('Wallet connection coming soon with Txchya AI App!');
            
            // Close modal
            walletModal.classList.remove('active');
          }, 300);
        });
      });
      
      // Close with Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && walletModal.classList.contains('active')) {
          walletModal.classList.remove('active');
        }
      });
    });
  </script>
