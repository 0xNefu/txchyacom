            <div class="flex flex-wrap justify-center gap-4">
              {socialLinks.map((social) => (
                <a 
                  href={social.url} 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="px-6 py-3 bg-black/50 hover:bg-black/70 rounded-xl font-semibold transition-all duration-300 hover:scale-105 flex items-center gap-2 border border-gray-700"
