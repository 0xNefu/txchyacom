    /* Background setup */
    .bg-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -100;
    }
    
    .bg-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/super-punk.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }
    
    .bg-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.1);
    }
    
    /* Content */
    .content {
      position: relative;
      z-index: 1;
      min-height: 100vh;
      padding-top: 20px;
    }
    
    /* ===== FLOATING HEADER WITH WALLET ===== */
    .floating-header {
      position: fixed;
      top: 20px;
      left: 50%;
      transform: translateX(-50%) translateY(0);
      z-index: 1000;
      background: rgba(0, 0, 0, 0.4);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 0, 255, 0.2);
      border-radius: 25px;
      padding: 0.5rem 1.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 2rem;
      min-width: 400px;
      max-width: 600px;
      width: auto;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      opacity: 1;
      visibility: visible;
    }
    
    .floating-header.hidden {
      opacity: 0;
      visibility: hidden;
      transform: translateX(-50%) translateY(-100%);
      pointer-events: none;
    }
    
    .floating-header.scrolled {
      transform: translateX(-50%) translateY(-20px);
      background: rgba(0, 0, 0, 0.7);
      border-color: rgba(255, 0, 255, 0.4);
      box-shadow: 0 5px 25px rgba(0, 0, 0, 0.5);
    }
    
    .floating-header:hover {
      background: rgba(0, 0, 0, 0.8);
      border-color: rgba(255, 0, 255, 0.5);
    }
    
    .header-left {
      display: flex;
      gap: 1rem;
      align-items: center;
    }
    
    .header-socials {
      display: flex;
      gap: 0.8rem;
      align-items: center;
    }
    
    .header-link {
      color: rgba(255, 255, 255, 0.6);
      text-decoration: none;
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;
      padding: 0.3rem 0.8rem;
      border-radius: 15px;
      transition: all 0.3s ease;
      display: flex;
      align-items: center;
      gap: 0.3rem;
      white-space: nowrap;
    }
    
    .header-link:hover {
      color: white;
      background: rgba(255, 0, 255, 0.1);
      transform: translateY(-1px);
    }
    
    /* GitHub link specific styling */
    .github-link {
      color: rgba(255, 255, 255, 0.6);
    }
    
    .github-link:hover {
      color: white;
      background: rgba(255, 255, 255, 0.1);
    }
    
    /* ===== WALLET BUTTON IN HEADER ===== */
    .header-wallet {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }
    
    .wallet-btn-header {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.4rem 1rem;
      background: linear-gradient(135deg, rgba(255, 0, 255, 0.2), rgba(0, 255, 255, 0.2));
      border: 1px solid rgba(255, 0, 255, 0.4);
      border-radius: 20px;
      color: #00ffff;
      font-family: 'Courier New', monospace;
      font-size: 0.75rem;
      cursor: pointer;
      transition: all 0.3s ease;
      white-space: nowrap;
    }
    
    .wallet-btn-header:hover {
      background: linear-gradient(135deg, rgba(255, 0, 255, 0.3), rgba(0, 255, 255, 0.3));
      border-color: #ff00ff;
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(255, 0, 255, 0.2);
    }
    
    .wallet-btn-header.active {
      background: linear-gradient(135deg, rgba(255, 0, 255, 0.4), rgba(0, 255, 255, 0.4));
      border-color: #00ffff;
      box-shadow: 0 0 20px rgba(0, 255, 255, 0.3);
    }
    
    .menu-toggle {
      color: #00ffff;
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;
      background: none;
      border: none;
      cursor: pointer;
      padding: 0.3rem 0.8rem;
      border-radius: 15px;
      transition: all 0.3s ease;
