---
import Layout from '../layouts/Base.astro';
import { RocketOutlined, GlobalOutlined, RadarChartOutlined, CustomerServiceOutlined } from '@ant-design/icons';
---

<Layout title="Txchya | The Nexus">
    <main class="h-screen w-full relative overflow-hidden bg-black font-primary">
        
        <!-- --- TOP HALF: MUSIC (Sonic Architecture) --- -->
        <a href="/music" class="group block h-1/2 w-full relative overflow-hidden border-b border-[#333] hover:border-[#a855f7] transition-all duration-500">
            <!-- Background: Deep Space / Nebula -->
            <div class="absolute inset-0 bg-[#0a0a0a]">
                <div class="absolute inset-0 bg-gradient-to-b from-[#1a1a2e] to-transparent opacity-60"></div>
                <!-- Stars -->
                <div class="stars absolute inset-0 opacity-30"></div>
                <!-- Neon Glow -->
                <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-[#a855f7]/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
            </div>

            <!-- Content -->
            <div class="absolute inset-0 flex flex-col items-center justify-center z-10 p-6">
                <!-- Icon -->
                <div class="mb-4 text-[#a855f7] opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all duration-500">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M9 18V5l12-2v13"></path><circle cx="6" cy="18" r="3"></circle><circle cx="18" cy="16" r="3"></circle>
                    </svg>
                </div>
                
                <h2 class="text-4xl md:text-6xl font-bold tracking-tighter text-white mb-2 group-hover:text-[#a855f7] transition-colors duration-300">
                    SONIC <span class="font-thin text-white/50 group-hover:text-white/80">ARCHITECTURE</span>
                </h2>
                <p class="text-sm md:text-base text-gray-400 tracking-[0.3em] uppercase group-hover:tracking-[0.5em] transition-all duration-500">
                    Ambient transmission // Cyberpunk Audio
                </p>
                
                <div class="mt-8 px-6 py-2 border border-white/20 rounded-full text-xs uppercase tracking-widest text-white/60 group-hover:bg-[#a855f7] group-hover:border-[#a855f7] group-hover:text-white transition-all duration-300">
                    Enter Transmission
                </div>
            </div>
        </a>

        <!-- --- CENTER: THE NEXUS WHEEL --- -->
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-50 pointer-events-none">
            <!-- Central Orb -->
            <div class="relative w-24 h-24 md:w-32 md:h-32 bg-black rounded-full border border-white/10 flex items-center justify-center shadow-[0_0_50px_rgba(168,85,247,0.3)] group-hover:shadow-[0_0_80px_rgba(0,243,255,0.5)] transition-all duration-700">
                <div class="absolute inset-0 rounded-full border border-white/5 animate-spin-slow"></div>
                <div class="absolute inset-2 rounded-full border border-white/5 animate-spin-reverse-slow"></div>
                
                <!-- Txchya Logo -->
                <div class="w-16 h-16 md:w-20 md:h-20 rounded-full overflow-hidden border-2 border-white/20 relative z-10">
                    <img src="/txchya-logo.jpg" alt="Txchya" class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500" />
                </div>

                <!-- Orbiting Satellites (Brands) -->
                <!-- EverRank -->
                <div class="absolute -top-16 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 opacity-50">
                    <div class="w-8 h-8 rounded bg-gradient-to-br from-violet-600 to-indigo-600 flex items-center justify-center text-white text-xs shadow-lg">
                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4.5 16.5c-1.5 1.26-2 5-2 5s3.74-.5 5-2c.71-.71.71-2.5.71-2.5h2.29L12 11l4.5 4.5 1 1.5 2 2 1-1-2-2-1.5-1L21 12l-5.5-1.5V8.21c0-.21 0-.21-.71-.71L10.5 3 6.5 7l4.5 4.5H8.71c0 .21 0 .21-.71.71L4.5 16.5Z"/><path d="m12 11-4 4"/><path d="m16 7-4 4"/></svg>
                    </div>
                </div>
                 <!-- Txchyon -->
                <div class="absolute -bottom-16 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 opacity-50">
                     <div class="w-8 h-8 rounded-full bg-black border border-white/20 flex items-center justify-center text-white text-xs">
                        T
                    </div>
                </div>
                <!-- Scanner -->
                <div class="absolute top-1/2 -left-16 -translate-y-1/2 flex flex-col items-center gap-2 opacity-50">
                     <div class="w-8 h-8 rounded bg-gradient-to-br from-purple-600 to-blue-600 flex items-center justify-center text-white text-xs">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
                    </div>
                </div>
                 <!-- AI -->
                <div class="absolute top-1/2 -right-16 -translate-y-1/2 flex flex-col items-center gap-2 opacity-50">
                     <div class="w-8 h-8 rounded-full bg-cyan-900/30 border border-cyan-500/50 flex items-center justify-center text-cyan-400 text-xs shadow-[0_0_10px_rgba(6,182,212,0.5)]">
                        AI
                    </div>
                </div>
            </div>
        </div>

        <!-- --- BOTTOM HALF: AI (Neuro-OS) --- -->
        <a href="/ai" class="group block h-1/2 w-full relative overflow-hidden bg-[#050505] hover:bg-[#080808] transition-all duration-500">
            <!-- Background: Matrix / Data Grid -->
            <div class="absolute inset-0">
                <!-- Grid -->
                <div class="absolute inset-0 bg-[linear-gradient(rgba(0,243,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,243,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px] [transform:perspective(1000px)_rotateX(60deg)_translateY(-100px)_scale(2)] opacity-40"></div>
                <!-- Scanline -->
                <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#00f3ff]/5 to-transparent h-full w-full animate-scanline pointer-events-none"></div>
                <!-- Glow -->
                <div class="absolute top-0 left-0 right-0 h-32 bg-gradient-to-b from-[#00f3ff]/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
            </div>

            <!-- Content -->
            <div class="absolute inset-0 flex flex-col items-center justify-center z-10 p-6 pt-24">
                 <!-- Icon -->
                 <div class="mb-4 text-[#00f3ff] opacity-60 group-hover:opacity-100 group-hover:scale-110 transition-all duration-500">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M12 2a10 10 0 1 0 10 10 4 4 0 0 1-5-5 4 4 0 0 1-5-5"></path><path d="M8.5 8.5v.01"></path><path d="M16 12v.01"></path><path d="M12 16v.01"></path>
                    </svg>
                </div>

                <h2 class="text-4xl md:text-6xl font-bold tracking-tighter text-white mb-2 group-hover:text-[#00f3ff] transition-colors duration-300">
                    NEURO <span class="font-thin text-white/50 group-hover:text-white/80">SYSTEM</span>
                </h2>
                <p class="text-sm md:text-base text-gray-400 tracking-[0.3em] uppercase group-hover:tracking-[0.5em] transition-all duration-500">
                    Machine Intelligence // Ecosystem Core
                </p>

                <div class="mt-8 px-6 py-2 border border-white/20 rounded-full text-xs uppercase tracking-widest text-white/60 group-hover:bg-[#00f3ff] group-hover:border-[#00f3ff] group-hover:text-black transition-all duration-300">
                    Initialize Core
                </div>
            </div>
        </a>

    </main>
</Layout>

<style>
    .stars {
        background-image: radial-gradient(white 1px, transparent 1px);
        background-size: 50px 50px;
    }
    
    @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    @keyframes spin-reverse-slow {
        from { transform: rotate(360deg); }
        to { transform: rotate(0deg); }
    }
    .animate-spin-slow {
        animation: spin-slow 20s linear infinite;
    }
    .animate-spin-reverse-slow {
        animation: spin-reverse-slow 15s linear infinite;
    }

    @keyframes scanline {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(100%); }
    }
    .animate-scanline {
        animation: scanline 8s linear infinite;
    }
</style>
