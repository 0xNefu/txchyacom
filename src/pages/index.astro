const tracks = [
  { number: '01', title: 'Night Protocol', duration: '7:33' },
  { number: '02', title: 'Neon Cyber Alley', duration: '5:54' },
  { number: '03', title: 'Rain on Chrome', duration: '3:43' },
  { number: '04', title: 'Skyline Ascension', duration: '7:50' },
  { number: '05', title: 'Signal in the Noise', duration: '7:28' },
  { number: '06', title: 'Ghost in the Circuit', duration: '5:07' },
  { number: '07', title: 'All Time High (ATH)', duration: '3:41' },
