---
import Layout from '../layouts/Base.astro';
import Chatbox from '../components/Chatbox';

const album = {
  title: 'Vibe Coding',
  label: 'DetroitLoud',
  releaseDate: '2026-01-15',
  upc: '199891430529'
};
---

<Layout title="Txchya | Cyberpunk Ambient Artist">
  <main class="min-h-screen bg-gradient-to-br from-gray-900 via-purple-900 to-violet-900 text-white font-sans">
    
    <section class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-purple-900/20 to-cyan-900/20 opacity-30"></div>
      
      <div class="container mx-auto px-4 py-20 md:py-32 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-block mb-6 px-4 py-2 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full">
            <span class="flex items-center gap-2 text-sm font-semibold">
              🎧 Cyberpunk Ambient Artist
            </span>
          </div>
          
          <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold mb-6 tracking-tight">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-300 to-purple-300">
              T x c h y a
            </span>
          </h1>
          
          <p class="text-xl md:text-2xl text-gray-300 mb-10 max-w-2xl mx-auto">
            Cyberpunk ambient soundscapes • AI-generated melodies • Digital dreamscapes
          </p>
          
          <div class="mb-12 inline-block transform hover:scale-105 transition-transform duration-300">
            <div class="bg-black/40 backdrop-blur-lg rounded-2xl p-6 border border-cyan-500/30">
              <div class="text-cyan-300 font-bold text-2xl mb-2">ALBUM OUT NOW</div>
              <div class="text-3xl font-bold mb-1">"{album.title}"</div>
              <div class="text-gray-300">Released {album.releaseDate} • {album.label}</div>
            </div>
          </div>
          
          <div class="flex flex-wrap justify-center gap-3 mb-8">
            <a href="https://youtube.com/@txchyaai" target="_blank" rel="noopener noreferrer" class="bg-red-600 hover:bg-red-700 px-5 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105">
              YouTube
            </a>
            <a href="https://open.spotify.com/artist/Txchya" target="_blank" rel="noopener noreferrer" class="bg-green-600 hover:bg-green-700 px-5 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105">
              Spotify
            </a>
            <a href="https://music.apple.com/us/artist/txchya" target="_blank" rel="noopener noreferrer" class="bg-pink-600 hover:bg-pink-700 px-5 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105">
              Apple Music
            </a>
          </div>

          <div class="flex flex-wrap justify-center gap-3 mb-16">
            <a href="https://twitter.com/txchyaai" target="_blank" rel="noopener noreferrer" class="bg-black/50 hover:bg-gray-800 px-4 py-2 rounded-full transition-all duration-300 hover:scale-105 border border-gray-700">
              X
            </a>
            <a href="https://instagram.com/txchyaai" target="_blank" rel="noopener noreferrer" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 px-4 py-2 rounded-full transition-all duration-300 hover:scale-105">
              Instagram
            </a>
            <a href="https://tiktok.com/@txchyaai" target="_blank" rel="noopener noreferrer" class="bg-black/50 hover:bg-gray-800 px-4 py-2 rounded-full transition-all duration-300 hover:scale-105">
              TikTok
            </a>
          </div>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 pb-20">
      <div class="grid lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        
        <div class="space-y-8">
          <div class="text-center lg:text-left">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-cyan-400 to-purple-400">
                Chat with Txchya
              </span>
            </h2>
            <p class="text-gray-300 text-lg">
              Ask about my music, creative process, or just chat about cyberpunk aesthetics
            </p>
          </div>
          
          <div class="bg-black/30 backdrop-blur-lg rounded-2xl border border-cyan-500/20 p-6 shadow-2xl">
            <div class="mb-4 flex items-center gap-3">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
              <span class="text-cyan-300 font-mono text-sm ml-4">AI_Interface v2.1</span>
            </div>
            
            <div class="h-[400px]">
              <Chatbox client:load />
            </div>
          </div>
          
          <div class="bg-gradient-to-r from-cyan-900/30 to-purple-900/30 rounded-xl p-6 border border-cyan-500/10">
            <h3 class="text-xl font-bold mb-3">Pro Tip:</h3>
            <p class="text-gray-300">
              Try asking about "{album.title}," my creative process with {album.label}, or favorite cyberpunk films that inspire my music.
            </p>
          </div>
        </div>
        
        <div class="space-y-8">
          <div>
            <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center lg:text-left">
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-400">
                {album.title}
              </span>
            </h2>
            
            <div class="mb-8 transform hover:scale-[1.02] transition-transform duration-500">
              <div class="bg-gradient-to-br from-cyan-500/20 to-purple-500/20 rounded-2xl p-6">
                <div class="grid md:grid-cols-3 gap-6">
                  <div class="md:col-span-1 aspect-square bg-gradient-to-br from-cyan-900 via-purple-900 to-black rounded-xl overflow-hidden shadow-2xl flex items-center justify-center">
                    <div class="text-center p-4">
                      <div class="text-3xl font-bold mb-2">VIBE</div>
                      <div class="text-3xl font-bold text-cyan-300 mb-4">CODING</div>
                      <div class="text-gray-400 text-sm">Txchya</div>
                    </div>
                  </div>
                  
                  <div class="md:col-span-2">
                    <div class="bg-black/40 rounded-xl p-5 h-full">
                      <h3 class="text-xl font-bold mb-4">Album Details</h3>
                      <div class="space-y-3 text-sm">
                        <div class="flex justify-between border-b border-gray-800/50 pb-2">
                          <span class="text-gray-400">Label:</span>
                          <span class="font-semibold">{album.label}</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-800/50 pb-2">
                          <span class="text-gray-400">Genre:</span>
                          <span class="font-semibold">Electronic • Ambient</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-800/50 pb-2">
                          <span class="text-gray-400">Release Date:</span>
                          <span class="font-semibold">{album.releaseDate}</span>
                        </div>
                        <div class="flex justify-between border-b border-gray-800/50 pb-2">
                          <span class="text-gray-400">UPC:</span>
                          <span class="font-mono text-cyan-300">{album.upc}</span>
                        </div>
                        <div class="pt-2">
                          <p class="text-gray-300 italic">
                            A sonic journey through digital landscapes and cyberpunk atmospheres.
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="bg-black/40 rounded-xl p-6 mb-8">
              <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-bold">Tracklist</h3>
                <span class="text-sm text-gray-400">11 tracks</span>
              </div>
              <ul class="space-y-2">
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">1</span>
                    <span class="text-gray-300">Night Protocol</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:22</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">2</span>
                    <span class="text-gray-300">Neon Cyber Alley</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:29</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">3</span>
                    <span class="text-gray-300">Rain on Chrome</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:36</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">4</span>
                    <span class="text-gray-300">Skyline Ascension</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:43</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">5</span>
                    <span class="text-gray-300">Signal in the Noise</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:50</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">6</span>
                    <span class="text-gray-300">Ghost in the Circuit</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:57</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">7</span>
                    <span class="text-gray-300">All Time High (ATH)</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:04</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">8</span>
                    <span class="text-gray-300">Destiny</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:11</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">9</span>
                    <span class="text-gray-300">Coded Dimension</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:18</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors border-b border-gray-800/30">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">10</span>
                    <span class="text-gray-300">Vibe Coded</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:25</span>
                </li>
                <li class="flex items-center justify-between py-3 px-3 rounded-lg hover:bg-gray-800/30 transition-colors">
                  <div class="flex items-center gap-4">
                    <span class="text-gray-500 w-6 text-right">11</span>
                    <span class="text-gray-300">Endless Fall</span>
                  </div>
                  <span class="text-cyan-400 text-sm font-mono">3:32</span>
                </li>
              </ul>
            </div>
            
            <div class="bg-gradient-to-r from-purple-900/30 to-pink-900/30 rounded-xl p-6 border border-pink-500/20">
              <h3 class="text-2xl font-bold mb-4">Join the Collective</h3>
              <p class="text-gray-300 mb-4">
                Get exclusive previews, behind-the-scenes content, and chat with other fans.
              </p>
              <a 
                href="https://t.me/txchyamusic" 
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-3 bg-cyan-600 hover:bg-cyan-700 px-6 py-3 rounded-full font-semibold transition-all duration-300 hover:scale-105"
              >
                Join Telegram Channel
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <footer class="border-t border-gray-800/50 py-8">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <div class="text-2xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-cyan-300 to-purple-300">
              Txchya
            </div>
            <p class="text-gray-500 text-sm mt-2">Cyberpunk Ambient Artist • {album.label}</p>
          </div>
          
          <div class="text-gray-500 text-sm text-center md:text-right">
            <div>© 2026 Txchya Music.</div>
            <div class="text-xs mt-1">Under exclusive license to {album.label}.</div>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>