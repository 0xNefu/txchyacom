      }
      
      showSuccessMessage(walletType) {
        const messages = {
          'phantom': 'Phantom wallet connected! Ready for future $TXCHYA integration.',
          'solflare': 'Solflare wallet connected! You will be notified when new features launch.',
          'metamask': 'MetaMask connected! Ethereum support coming soon.',
