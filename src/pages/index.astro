    // ===== SCROLL-TO-HIDE HEADER =====
    class ScrollHeader {
      constructor() {
        this.header = document.getElementById('floatingHeader');
        this.lastScrollY = window.scrollY;
        this.scrollThreshold = 100;
        
        if (this.header) {
          this.init();
        }
      }
      
      init() {
        // Initial check for top of page
        this.checkScrollPosition();
        
        // Listen for scroll events with debouncing
        let ticking = false;
        window.addEventListener('scroll', () => {
          if (!ticking) {
            window.requestAnimationFrame(() => {
              this.handleScroll();
              ticking = false;
            });
            ticking = true;
          }
        });
        
        // Also check on resize
        window.addEventListener('resize', () => {
          this.checkScrollPosition();
        });
        
        // Show header when mouse is near top
        document.addEventListener('mousemove', (e) => {
          if (e.clientY < 50 && this.header.classList.contains('hidden')) {
            this.showHeader();
          }
        });
      }
      
      handleScroll() {
        const currentScrollY = window.scrollY;
        const scrollDirection = currentScrollY > this.lastScrollY ? 'down' : 'up';
        
        // At the very top of page
        if (currentScrollY < 10) {
          this.showHeader();
          this.header.classList.remove('scrolled');
        } 
        // Scrolling down - hide header
        else if (scrollDirection === 'down' && currentScrollY > this.scrollThreshold) {
          this.hideHeader();
        }
        // Scrolling up - show header
        else if (scrollDirection === 'up') {
          this.showHeader();
          this.header.classList.add('scrolled');
        }
        
        this.lastScrollY = currentScrollY;
      }
      
      hideHeader() {
        if (!this.header.classList.contains('hidden')) {
          this.header.classList.add('hidden');
          // Also hide menu if it's open
          const menu = document.getElementById('licensingMenu');
          if (menu && menu.classList.contains('active')) {
            menu.classList.remove('active');
            const menuToggle = document.getElementById('menuToggle');
            if (menuToggle) menuToggle.textContent = 'MENU ‚ñæ';
          }
        }
      }
      
      showHeader() {
        this.header.classList.remove('hidden');
      }
      
      checkScrollPosition() {
        if (window.scrollY < 10) {
          this.showHeader();
          this.header.classList.remove('scrolled');
        } else {
          this.header.classList.add('scrolled');
        }
      }
    }
    
    // ===== WALLET CONNECTION MANAGER =====
    class WalletManager {
      constructor() {
        this.isConnected = false;
        this.walletAddress = null;
        this.headerBtn = document.getElementById('connectWalletHeaderBtn');
        this.modal = document.getElementById('walletModal');
        this.closeModalBtn = document.getElementById('closeModal');
        this.walletOptions = document.querySelectorAll('.wallet-option');
        
        this.init();
      }
      
      init() {
        // Check for existing connection (simulated)
        this.checkExistingConnection();
        
        // Header button click
        if (this.headerBtn) {
          this.headerBtn.addEventListener('click', () => {
            this.openModal();
          });
        }
        
        // Close modal
        if (this.closeModalBtn) {
          this.closeModalBtn.addEventListener('click', () => {
            this.closeModal();
          });
        }
        
        // Close modal when clicking outside
        if (this.modal) {
          this.modal.addEventListener('click', (e) => {
            if (e.target === this.modal) {
              this.closeModal();
            }
          });
        }
        
        // Wallet option click handlers
        this.walletOptions.forEach(option => {
          option.addEventListener('click', () => {
            this.connectWallet(option.dataset.wallet);
          });
        });
        
        // Close with Escape key
        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.modal.classList.contains('active')) {
            this.closeModal();
          }
        });
      }
      
      checkExistingConnection() {
        // Simulate checking for existing wallet connection
        const savedWallet = localStorage.getItem('txchya_wallet_connected');
        if (savedWallet === 'true') {
          this.isConnected = true;
          this.walletAddress = localStorage.getItem('txchya_wallet_address') || '0x1234...5678';
          this.updateUI();
        }
      }
      
      openModal() {
        if (this.modal) {
          this.modal.classList.add('active');
          // Prevent body scroll when modal is open
          document.body.style.overflow = 'hidden';
        }
      }
      
      closeModal() {
        if (this.modal) {
          this.modal.classList.remove('active');
          // Restore body scroll
          document.body.style.overflow = '';
        }
      }
      
      connectWallet(walletType) {
        // Simulate wallet connection
        const option = document.querySelector(`[data-wallet="${walletType}"]`);
        
        // Add click animation
        option.style.transform = 'scale(0.95)';
        option.style.background = 'rgba(0, 255, 255, 0.1)';
        
        setTimeout(() => {
          option.style.transform = '';
          option.style.background = '';
          
          // Simulate successful connection
          this.isConnected = true;
          this.walletAddress = this.generateFakeAddress();
          
          // Save to localStorage (simulated)
          localStorage.setItem('txchya_wallet_connected', 'true');
          localStorage.setItem('txchya_wallet_address', this.walletAddress);
          
          // Update UI
          this.updateUI();
          
          // Show success message
          this.showSuccessMessage(walletType);
          
          // Close modal
          this.closeModal();
        }, 300);
      }
      
      generateFakeAddress() {
        const chars = '0123456789ABCDEF';
        let address = '0x';
        for (let i = 0; i < 8; i++) {
          address += chars[Math.floor(Math.random() * chars.length)];
        }
        address += '...';
        for (let i = 0; i < 8; i++) {
          address += chars[Math.floor(Math.random() * chars.length)];
        }
        return address;
      }
      
      updateUI() {
        if (this.isConnected && this.headerBtn) {
          this.headerBtn.innerHTML = `
