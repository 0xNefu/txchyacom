        }, 300);
      });
    });
    
    // ============================================
    // MUSIC PLAYER FUNCTIONALITY
    // ============================================
    
    // Track data matching your MP3 files
    const musicTracks = [
      { number: '01', title: 'Night Protocol', duration: '7:33', file: '/music/night-protocol.mp3' },
      { number: '02', title: 'Neon Cyber Alley', duration: '5:54', file: '/music/neon-cyber-alley.mp3' },
      { number: '03', title: 'Rain on Chrome', duration: '3:43', file: '/music/rain-on-chrome.mp3' },
      { number: '04', title: 'Skyline Ascension', duration: '7:50', file: '/music/skyline-ascension.mp3' },
      { number: '05', title: 'Signal in the Noise', duration: '7:28', file: '/music/signal-in-the-noise.mp3' },
      { number: '06', title: 'Ghost in the Circuit', duration: '5:07', file: '/music/ghost-in-the-circuit.mp3' },
      { number: '07', title: 'All Time High (ATH)', duration: '3:41', file: '/music/all-time-high.mp3' },
      { number: '08', title: 'Destiny', duration: '5:25', file: '/music/destiny.mp3' },
      { number: '09', title: 'Coded Dimension', duration: '3:10', file: '/music/coded-dimension.mp3' },
      { number: '10', title: 'Vibe Coded', duration: '4:29', file: '/music/vibe-coded.mp3' },
      { number: '11', title: 'Endless Fall', duration: '3:54', file: '/music/endless-fall.mp3' }
    ];

    // Audio setup
    const audio = new Audio();
    let currentTrackIndex = 0;
    let isPlaying = false;
    let isShuffled = false;
    let isRepeating = false;

    // DOM Elements
    const nowPlayingTitle = document.getElementById('nowPlayingTitle');
    const listenerCount = document.getElementById('listenerCount');
    const progressBar = document.getElementById('progressBar');
    const currentTime = document.getElementById('currentTime');
    const duration = document.getElementById('duration');
    const playBtn = document.getElementById('playBtn');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const shuffleBtn = document.getElementById('shuffleBtn');
    const repeatBtn = document.getElementById('repeatBtn');
    const volumeSlider = document.getElementById('volumeSlider');
    const volumeText = document.getElementById('volumeText');
    const albumCover = document.getElementById('albumCover');
    const hotspotContainer = document.getElementById('hotspotContainer');

    // Format time (seconds to MM:SS)
    function formatTime(seconds) {
      const mins = Math.floor(seconds / 60);
      const secs = Math.floor(seconds % 60);
      return `${mins}:${secs.toString().padStart(2, '0')}`;
    }

    // Create hotspots on album art
    function createHotspots() {
      // Clear existing hotspots
      if (!hotspotContainer) return;
      hotspotContainer.innerHTML = '';
      
      // Positions for 11 tracks (3x4 grid)
      const positions = [
        { x: 25, y: 25 }, { x: 50, y: 25 }, { x: 75, y: 25 },
        { x: 25, y: 50 }, { x: 50, y: 50 }, { x: 75, y: 50 },
        { x: 25, y: 75 }, { x: 50, y: 75 }, { x: 75, y: 75 },
        { x: 40, y: 90 }, { x: 60, y: 90 }
      ];
      
      positions.forEach((pos, index) => {
        if (index < musicTracks.length) {
          const hotspot = document.createElement('button');
          hotspot.className = 'absolute w-8 h-8 rounded-full bg-cyber-pink/30 border border-cyber-cyan/50 flex items-center justify-center text-white text-xs font-bold transform -translate-x-1/2 -translate-y-1/2 cursor-pointer transition-all duration-300 hover:scale-125 hover:bg-cyber-pink/60 hover:border-cyber-cyan hover:shadow-[0_0_15px_rgba(0,255,255,0.5)]';
          hotspot.style.left = `${pos.x}%`;
          hotspot.style.top = `${pos.y}%`;
          hotspot.textContent = index + 1;
          hotspot.title = musicTracks[index].title;
          
          hotspot.addEventListener('click', (e) => {
            e.stopPropagation();
            playTrack(index);
          });
          
          hotspotContainer.appendChild(hotspot);
        }
      });
    }

    // Load and play track
    function loadTrack(index) {
      if (index < 0) index = musicTracks.length - 1;
      if (index >= musicTracks.length) index = 0;
      
      currentTrackIndex = index;
      const track = musicTracks[index];
      
      // Update UI
      nowPlayingTitle.textContent = track.title;
      duration.textContent = track.duration;
      
      // Load audio
      audio.src = track.file;
      
      // Update active track in list
      document.querySelectorAll('.track-item').forEach((item, i) => {
        item.classList.toggle('bg-cyber-purple/10', i === index);
        item.classList.toggle('border-cyber-pink/30', i === index);
      });
      
      // Update hotspots
      if (hotspotContainer) {
        hotspotContainer.querySelectorAll('button').forEach((hotspot, i) => {
          hotspot.classList.toggle('bg-cyber-pink/60', i === index);
          hotspot.classList.toggle('border-cyber-cyan', i === index);
          hotspot.classList.toggle('scale-125', i === index);
        });
      }
      
      // If already playing, continue
      if (isPlaying) {
        audio.play().catch(e => console.log('Auto-play prevented:', e));
      }
    }

    // Play/pause toggle
    function togglePlay() {
      if (!playBtn) return;
      
      if (isPlaying) {
        audio.pause();
        playBtn.querySelector('.play-icon').classList.remove('hidden');
        playBtn.querySelector('.pause-icon').classList.add('hidden');
      } else {
        // If no track loaded, load first
        if (!audio.src) loadTrack(0);
        
        audio.play().catch(e => {
          console.log('Playback failed:', e);
          // Show error message
          nowPlayingTitle.textContent = 'Click a track to play';
        });
        playBtn.querySelector('.play-icon').classList.add('hidden');
        playBtn.querySelector('.pause-icon').classList.remove('hidden');
      }
      isPlaying = !isPlaying;
    }

    // Update progress bar
    function updateProgress() {
      if (audio.duration) {
        const progress = (audio.currentTime / audio.duration) * 100;
        progressBar.style.width = `${progress}%`;
        currentTime.textContent = formatTime(audio.currentTime);
      }
    }

    // Update listener count (simulated)
    function updateListenerCount() {
      if (!listenerCount) return;
      
      const base = 1247;
      const change = Math.floor(Math.random() * 21) - 10;
      const newCount = Math.max(1000, base + change);
      listenerCount.textContent = newCount.toLocaleString();
      
      // Animate
      listenerCount.classList.add('scale-110');
      setTimeout(() => listenerCount.classList.remove('scale-110'), 300);
    }

    // Global playTrack function
    window.playTrack = function(index) {
      loadTrack(index);
      if (!isPlaying) togglePlay();
    };

    // Initialize player
    function initializePlayer() {
      // Create hotspots
      createHotspots();
      
      // Event listeners
      if (playBtn) {
        playBtn.addEventListener('click', togglePlay);
      }
      
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          playTrack(currentTrackIndex - 1);
        });
      }
      
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          playTrack(currentTrackIndex + 1);
        });
      }
      
      if (shuffleBtn) {
        shuffleBtn.addEventListener('click', () => {
          isShuffled = !isShuffled;
          shuffleBtn.classList.toggle('text-cyber-pink', isShuffled);
          shuffleBtn.classList.toggle('scale-110', isShuffled);
        });
      }
      
      if (repeatBtn) {
        repeatBtn.addEventListener('click', () => {
          isRepeating = !isRepeating;
          repeatBtn.classList.toggle('text-cyber-cyan', isRepeating);
          repeatBtn.classList.toggle('scale-110', isRepeating);
        });
      }
      
      // Volume control
      if (volumeSlider && volumeText) {
        volumeSlider.addEventListener('input', (e) => {
          const volume = e.target.value / 100;
          audio.volume = volume;
          volumeText.textContent = `${e.target.value}%`;
        });
      }
      
      // Track list items
      document.querySelectorAll('.track-item').forEach((item, index) => {
        item.addEventListener('click', () => {
          playTrack(index);
        });
      });
      
      // Audio events
      audio.addEventListener('timeupdate', updateProgress);
      audio.addEventListener('loadedmetadata', () => {
        duration.textContent = formatTime(audio.duration);
      });
      
      audio.addEventListener('ended', () => {
        if (isRepeating) {
          audio.currentTime = 0;
          audio.play();
        } else if (isShuffled) {
          playTrack(Math.floor(Math.random() * musicTracks.length));
        } else {
          playTrack(currentTrackIndex + 1);
        }
      });
      
      // Initialize with first track
      loadTrack(0);
      audio.volume = volumeSlider ? volumeSlider.value / 100 : 0.7;
      
      // Update listener count every 30 seconds
      setInterval(updateListenerCount, 30000);
      updateListenerCount();
    }

    // Initialize when page loads
    if (typeof window !== 'undefined') {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializePlayer);
      } else {
        initializePlayer();
      }
    }
  </script>
  
