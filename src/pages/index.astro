---
// src/pages/index.astro - Premium Integrated Neural Hub
import BaseLayout from '../layouts/Base.astro';

const streamingLinks = [
  { platform: 'Spotify', url: 'https://open.spotify.com/album/0LhTrB8zmx3tUQuf5TbIKf', icon: 'üéµ' },
  { platform: 'YouTube', url: 'https://music.youtube.com/playlist?list=OLAK5uy_nX_hc77ChAc5zmOOgcLEohplek8pesLmU', icon: '‚ñ∂Ô∏è' },
  { platform: 'Apple', url: 'https://music.apple.com/us/album/vibe-coding/1872746774', icon: 'üçé' },
  { platform: 'SoundCloud', url: 'https://soundcloud.com/txchya', icon: '‚òÅÔ∏è' }
];
---

<BaseLayout title="TXCHYA | Intelligence & Sound Architecture">
  <style>
    /* Premium Design Tokens */
    .hero-container {
      position: relative;
      min-height: 100vh;
      width: 100%;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      background: #ffffff;
    }

    html.dark .hero-container {
      background: #000000;
    }

    /* Massive Background Branding */
    .brand-bg-text {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: 'Orbitron', sans-serif;
      font-size: clamp(10rem, 35vw, 25rem);
      font-weight: 950;
      color: rgba(0, 0, 0, 0.03);
      z-index: 1;
      pointer-events: none;
      white-space: nowrap;
      letter-spacing: -0.05em;
    }

    html.dark .brand-bg-text {
      color: rgba(255, 255, 255, 0.03);
    }

    /* Neural HUD Panel */
    .hud-panel {
      position: relative;
      z-index: 10;
      width: 90%;
      max-width: 900px;
      padding: 5rem 3rem;
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(40px);
      -webkit-backdrop-filter: blur(40px);
      border: 1px solid rgba(0, 0, 0, 0.05);
      border-radius: 60px;
      box-shadow: 0 50px 100px -20px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: all 0.5s ease;
    }

    html.dark .hud-panel {
      background: rgba(10, 10, 10, 0.8);
      border-color: rgba(255, 255, 255, 0.05);
      box-shadow: 0 50px 150px -20px rgba(0, 243, 255, 0.1);
    }

    /* Input Area Styling */
    .ai-input-zone {
      width: 100%;
      max-width: 650px;
      margin-top: 3rem;
    }

    .ai-input-field {
      width: 100%;
      padding: 1.5rem 2rem;
      border-radius: 30px;
      border: 2px solid rgba(0, 0, 0, 0.05);
      background: rgba(240, 240, 240, 0.5);
      font-family: 'Courier New', monospace;
      font-size: 1rem;
      outline: none;
      transition: all 0.3s ease;
    }

    html.dark .ai-input-field {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.1);
      color: #fff;
    }

    .ai-input-field:focus {
      border-color: #2563eb;
      background: #fff;
      box-shadow: 0 0 20px rgba(37, 99, 235, 0.1);
    }

    html.dark .ai-input-field:focus {
      border-color: #00f3ff;
      background: #000;
      box-shadow: 0 0 20px rgba(0, 243, 255, 0.2);
    }

    /* Grid Aesthetics */
    .neural-grid {
      position: absolute;
      inset: 0;
      background-image: radial-gradient(rgba(0, 0, 0, 0.05) 1px, transparent 1px);
      background-size: 40px 40px;
      z-index: 2;
    }

    html.dark .neural-grid {
      background-image: radial-gradient(rgba(0, 243, 255, 0.05) 1px, transparent 1px);
    }

    /* Action Buttons */
    .action-btn {
      margin-top: 1.5rem;
      padding: 1rem 3rem;
      background: #2563eb;
      color: white;
      border-radius: 30px;
      font-weight: 900;
      text-transform: uppercase;
      letter-spacing: 2px;
      font-size: 0.75rem;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 10px 30px rgba(37, 99, 235, 0.2);
    }

    html.dark .action-btn {
      background: #00f3ff;
      color: #000;
      box-shadow: 0 10px 30px rgba(0, 243, 255, 0.2);
    }

    .action-btn:hover {
      transform: translateY(-5px);
      background: #000;
      color: #fff;
    }
  </style>

  <main class="hero-container">
    <div class="brand-bg-text">TXCHYA</div>
    <div class="neural-grid"></div>

    <div class="hud-panel">
      <!-- Top Branding -->
      <div class="mb-12 text-center">
        <div class="text-[10px] font-black tracking-[0.6em] text-blue-600 dark:text-cyan-400 mb-4 uppercase italic">Decision Intelligence Gateway</div>
        <h1 class="text-7xl md:text-9xl font-black tracking-tighter text-slate-900 dark:text-white font-primary italic leading-none">
          TXCHYA<span class="text-blue-600 dark:text-cyan-400 not-italic">.</span>
        </h1>
      </div>

      <!-- AI CORE INPUT -->
      <div class="ai-input-zone">
        <div class="text-center font-black text-[10px] uppercase tracking-[0.4em] text-slate-400 mb-6 italic">/// Initiate Neural Query</div>
        <div class="flex flex-col md:flex-row gap-4">
          <input 
            id="mainHubInput"
            type="text" 
            placeholder="READY_FOR_INPUT..." 
            class="ai-input-field flex-1"
          />
          <button id="mainHubExecute" class="action-btn">Link_Core</button>
        </div>
      </div>

      <!-- Ecosystem Links -->
      <div class="mt-20 w-full flex flex-wrap justify-center gap-8 border-t border-slate-100 dark:border-white/5 pt-12">
        <a href="/music" class="group flex flex-col items-center gap-2">
            <div class="text-[9px] font-black tracking-widest text-slate-400 group-hover:text-blue-500 uppercase">Sonic_Architecture</div>
            <div class="h-[2px] w-0 group-hover:w-full bg-blue-500 transition-all duration-500"></div>
        </a>
        <a href="/ai" class="group flex flex-col items-center gap-2">
            <div class="text-[9px] font-black tracking-widest text-slate-400 group-hover:text-cyan-400 uppercase">Neural_System</div>
            <div class="h-[2px] w-0 group-hover:w-full bg-cyan-400 transition-all duration-500"></div>
        </a>
        <a href="https://x.com/txchyaai" target="_blank" class="group flex flex-col items-center gap-2">
            <div class="text-[9px] font-black tracking-widest text-slate-400 group-hover:text-pink-500 uppercase">X_Network</div>
            <div class="h-[2px] w-0 group-hover:w-full bg-pink-500 transition-all duration-500"></div>
        </a>
      </div>
      
      <!-- Footer Info -->
      <div class="mt-12 text-[8px] font-black tracking-[0.3em] text-slate-300 uppercase">
        V2.0 // Managed by GalaxyBuilt // <span class="text-slate-900 dark:text-white">Active</span>
      </div>
    </div>

    <!-- Secondary HUD Overlay - Technical Metadata -->
    <div class="absolute bottom-10 left-10 z-20 hidden md:block">
        <div class="flex flex-col gap-1">
            <div class="text-[7px] font-black tracking-[4px] text-blue-600 dark:text-cyan-400 opacity-50">LATENCY: 14ms</div>
            <div class="text-[7px] font-black tracking-[4px] text-slate-400 opacity-50">X: 144.02 // Y: 92.11</div>
        </div>
    </div>

    <div class="absolute top-10 left-10 z-20 hidden md:block">
        <div class="flex flex-col gap-1">
            <div class="text-[7px] font-black tracking-[4px] text-slate-400 opacity-50 uppercase">Neural_Link_Established</div>
            <div class="text-[7px] font-black tracking-[4px] text-slate-400 opacity-50 uppercase">Secure_Node_0x71</div>
        </div>
    </div>
  </main>

  <!-- Global Ecosystem Grid Section -->
  <section class="bg-slate-50 dark:bg-[#050505] py-32 relative z-30 border-t border-slate-200 dark:border-white/5">
    <div class="max-w-6xl mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            <!-- Music -->
            <div class="group">
                <div class="text-[10px] font-black tracking-[0.4em] text-blue-600 dark:text-cyan-400 mb-6 uppercase">Sonic Architecture</div>
                <h3 class="text-3xl font-black tracking-tighter text-slate-900 dark:text-white italic mb-4">Vibe Coding</h3>
                <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed mb-8">The first neural-integrated ambient project by TXCHYA. Explore the intersection of machine intelligence and synthetic soundscapes.</p>
                <a href="/music" class="text-[10px] font-black tracking-[0.2em] uppercase border-b border-slate-900 dark:border-white pb-1 hover:text-blue-600 dark:hover:text-cyan-400 transition-colors">Enter_Stream_Grid</a>
            </div>

            <!-- AI -->
            <div class="group">
                <div class="text-[10px] font-black tracking-[0.4em] text-blue-600 dark:text-cyan-400 mb-6 uppercase">Neural System</div>
                <h3 class="text-3xl font-black tracking-tighter text-slate-900 dark:text-white italic mb-4">Decision Core</h3>
                <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed mb-8">Direct interface with the TXCHYA neural network. Real-time intelligence processing and creative synthesis.</p>
                <a href="/ai" class="text-[10px] font-black tracking-[0.2em] uppercase border-b border-slate-900 dark:border-white pb-1 hover:text-blue-600 dark:hover:text-cyan-400 transition-colors">Access_Framework</a>
            </div>

            <!-- Network -->
            <div class="group">
                <div class="text-[10px] font-black tracking-[0.4em] text-blue-600 dark:text-cyan-400 mb-6 uppercase">Global Network</div>
                <h3 class="text-3xl font-black tracking-tighter text-slate-900 dark:text-white italic mb-4">The Nexus</h3>
                <p class="text-sm text-slate-500 dark:text-slate-400 leading-relaxed mb-8">Connected platforms including X, YouTube, and the Txchyon ecosystem. Verified knowledge distribution.</p>
                <a href="https://x.com/txchyaai" target="_blank" class="text-[10px] font-black tracking-[0.2em] uppercase border-b border-slate-900 dark:border-white pb-1 hover:text-blue-600 dark:hover:text-cyan-400 transition-colors">Connect_Terminal</a>
            </div>
        </div>
    </div>
  </section>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const input = document.getElementById('mainHubInput');
      const btn = document.getElementById('mainHubExecute');
      
      const navigate = () => {
        const query = input.value.trim();
        if(query) window.location.href = '/ai?q=' + encodeURIComponent(query);
      };

      btn?.addEventListener('click', navigate);
      input?.addEventListener('keypress', (e) => {
        if(e.key === 'Enter') navigate();
      });
    });
  </script>
</BaseLayout>
