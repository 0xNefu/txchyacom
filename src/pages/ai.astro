---
// src/pages/ai.astro - Professional UI with Mode-Based Accents
import BaseLayout from '../layouts/Base.astro';
---

<BaseLayout title="TXCHYA | Decision Intelligence Layer">
  <style>
    :root {
      --primary-accent: #2563eb; /* Blue for Light Mode */
      --hero-bg-opacity: 0.7;
    }

    html.dark {
      --primary-accent: #00f3ff; /* Cyan for Dark Mode */
      --hero-bg-opacity: 0.2;
    }

    .main-wrapper {
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .hero-section {
      position: relative;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 4rem 1rem;
    }

    .hero-bg {
      position: absolute;
      inset: 0;
      background-image: url('/hero99.jpg');
      background-size: cover;
      background-position: center;
      opacity: var(--hero-bg-opacity);
      z-index: 0;
      transition: opacity 0.5s ease;
    }

    .grid-pattern {
      position: absolute;
      inset: 0;
      background-image: 
        linear-gradient(rgba(37, 99, 235, 0.05) 1px, transparent 1px),
        linear-gradient(90deg, rgba(37, 99, 235, 0.05) 1px, transparent 1px);
      background-size: 50px 50px;
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 10;
      width: 100%;
      max-width: 800px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* Title with Dynamic Gradient */
    .title-gradient {
      font-size: clamp(3rem, 10vw, 5rem);
      font-weight: 900;
      line-height: 0.9;
      margin-bottom: 2rem;
      text-align: center;
      font-family: 'Orbitron', sans-serif;
      background: linear-gradient(90deg, #1e293b, #2563eb);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
    }

    html.dark .title-gradient {
      background: linear-gradient(90deg, #fff, #00f3ff, #7c3aed);
      -webkit-background-clip: text;
      background-clip: text;
      text-shadow: 0 0 30px rgba(0, 243, 255, 0.3);
    }

    .subtitle {
      font-size: 1.1rem;
      text-align: center;
      margin-bottom: 3rem;
      opacity: 0.8;
      max-width: 600px;
      font-weight: 500;
    }

    /* AI CONSOLE */
    .ai-console {
      width: 100%;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(0, 0, 0, 0.1);
      border-radius: 20px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      height: 500px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
      transition: all 0.3s ease;
    }

    html.dark .ai-console {
      background: rgba(0, 0, 0, 0.7);
      border-color: rgba(0, 243, 255, 0.2);
      box-shadow: 0 0 50px rgba(0, 243, 255, 0.1);
    }

    .console-header {
      padding: 0.75rem 1.5rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(0, 0, 0, 0.02);
    }

    html.dark .console-header {
      border-color: rgba(0, 243, 255, 0.1);
      background: rgba(0, 243, 255, 0.05);
    }

    .status-tag {
      font-size: 10px;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--primary-accent);
      font-weight: 800;
    }

    .console-messages {
      flex: 1;
      padding: 2rem;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .msg {
      max-width: 85%;
      padding: 1rem 1.25rem;
      border-radius: 12px;
      font-size: 13px;
      line-height: 1.6;
    }

    .msg-bot {
      align-self: flex-start;
      background: rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(0, 0, 0, 0.05);
    }

    html.dark .msg-bot {
      background: rgba(0, 243, 255, 0.05);
      border-color: rgba(0, 243, 255, 0.2);
      color: #00f3ff;
      border-left: 2px solid #00f3ff;
      border-radius: 4px;
    }

    .msg-user {
      align-self: flex-end;
      background: var(--primary-accent);
      color: white;
    }

    html.dark .msg-user {
      background: #fff;
      color: #000;
      font-weight: 700;
    }

    .console-input-area {
      padding: 1.5rem;
      border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    html.dark .console-input-area {
      border-color: rgba(0, 243, 255, 0.1);
      background: rgba(0, 0, 0, 0.3);
    }

    .input-wrapper {
      display: flex;
      gap: 1rem;
    }

    .console-input {
      flex: 1;
      background: transparent;
      border: none;
      border-bottom: 2px solid rgba(0, 0, 0, 0.1);
      padding: 0.5rem 0;
      font-family: 'Courier New', monospace;
      outline: none;
      transition: border-color 0.3s ease;
    }

    html.dark .console-input {
      border-color: rgba(0, 243, 255, 0.2);
      color: #fff;
    }

    .console-input:focus {
      border-color: var(--primary-accent);
    }

    .console-submit {
      background: var(--primary-accent);
      color: white;
      border: none;
      border-radius: 8px;
      padding: 0 1.5rem;
      font-weight: 800;
      text-transform: uppercase;
      font-size: 11px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    html.dark .console-submit:hover {
      box-shadow: 0 0 20px rgba(0, 243, 255, 0.4);
    }

    .scrollbar-hide::-webkit-scrollbar { width: 4px; }
    .scrollbar-hide::-webkit-scrollbar-thumb { background: var(--primary-accent); border-radius: 10px; }
  </style>

  <div class="main-wrapper">
    <section class="hero-section">
      <div class="hero-bg"></div>
      <div class="grid-pattern"></div>

      <div class="hero-content">
        <h1 class="title-gradient">TXCHYA_CORE</h1>
        <p class="subtitle">Decision Intelligence Layer // Verified Knowledge Node</p>

        <div class="ai-console">
          <div class="console-header">
            <div class="status-tag">Neural_Link: Established</div>
            <div style="font-size: 9px; opacity: 0.4;">SESSION_ID: TX-{Math.floor(Math.random()*9999)}</div>
          </div>

          <div id="console-messages" class="console-messages scrollbar-hide">
             <div class="msg msg-bot">
                > SYSTEM INITIALIZED.<br/>
                > I AM TXCHYA. ACCESSING VERIFIED DATABASE NODES.<br/>
                > HOW CAN I ASSIST YOUR DECISION PROCESS?
             </div>
          </div>

          <div class="console-input-area">
            <form id="console-form" class="input-wrapper">
              <input type="text" id="console-input" class="console-input" placeholder="INPUT QUERY..." autocomplete="off" />
              <button type="submit" class="console-submit">Execute</button>
            </form>
          </div>
        </div>

        <div style="margin-top: 4rem; opacity: 0.4; font-size: 10px; text-align: center; letter-spacing: 2px;">
           POWERED BY EVERRANK // SYSTEM_ULTIMA
        </div>
      </div>
    </section>
  </div>

  <script>
    const form = document.getElementById('console-form');
    const input = document.getElementById('console-input');
    const logs = document.getElementById('console-messages');

    let processing = false;

    function addLog(text, isUser = false) {
      const div = document.createElement('div');
      div.className = `msg ${isUser ? 'msg-user' : 'msg-bot'}`;
      div.innerHTML = (isUser ? '' : '> ') + text.replace(/\n/g, '<br/>');
      logs.appendChild(div);
      logs.scrollTop = logs.scrollHeight;
    }

    async function handle(e) {
      e?.preventDefault();
      const val = input.value.trim();
      if(!val || processing) return;

      input.value = '';
      processing = true;
      addLog(val, true);

      const loader = document.createElement('div');
      loader.className = 'msg msg-bot';
      loader.style.opacity = '0.5';
      loader.textContent = '> ANALYZING NODES...';
      logs.appendChild(loader);

      try {
        const res = await fetch('/api/chat', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ message: val, site: 'Txchya.com Core' })
        });
        const data = await res.json();
        loader.remove();
        addLog(data.reply || 'LINK FAILED.');
      } catch (err) {
        loader.remove();
        addLog('NEURAL ERROR.');
      } finally {
         processing = false;
         input.focus();
      }
    }

    form?.addEventListener('submit', handle);

    // Initial query check
    const q = new URLSearchParams(window.location.search).get('q');
    if(q) {
      input.value = q;
      setTimeout(() => handle(), 500);
    }
  </script>
</BaseLayout>