---
import Layout from '../layouts/Base.astro';
import { RobotOutlined, UserOutlined, SendOutlined } from '@ant-design/icons';
---

<Layout title="Txchya AI | Neuro-OS">
    <div class="h-screen w-full flex flex-col items-center justify-center bg-[#050505] relative overflow-hidden font-primary text-gray-100">
        
        <!-- --- BACKGROUND --- -->
        <div class="absolute inset-0 pointer-events-none">
             <!-- Grid -->
             <div class="absolute inset-0 bg-[linear-gradient(rgba(0,243,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(0,243,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px] [transform:perspective(1000px)_rotateX(60deg)_translateY(-100px)_scale(2)] opacity-40"></div>
             <!-- Scanline -->
             <div class="absolute inset-0 bg-gradient-to-b from-transparent via-[#00f3ff]/5 to-transparent h-full w-full animate-scanline pointer-events-none"></div>
             <!-- Glow -->
             <div class="absolute top-0 left-0 right-0 h-64 bg-gradient-to-b from-[#00f3ff]/10 to-transparent"></div>
        </div>

        <!-- --- HEADER --- -->
        <div class="absolute top-0 left-0 w-full p-6 flex justify-between items-center z-20">
            <a href="/" class="text-xs uppercase tracking-[0.2em] text-[#00f3ff]/60 hover:text-[#00f3ff] transition-colors">
                &lt; Return to Nexus
            </a>
            <div class="flex items-center gap-4">
                 <div class="w-2 h-2 rounded-full bg-[#00f3ff] animate-pulse"></div>
                 <span class="text-xs uppercase tracking-[0.2em] text-[#00f3ff]/60">System Online</span>
            </div>
        </div>

        <!-- --- CHAT INTERFACE --- -->
        <div class="relative z-10 w-full max-w-4xl h-[80vh] flex flex-col bg-black/40 backdrop-blur-md border border-[#00f3ff]/20 rounded-lg overflow-hidden shadow-[0_0_50px_rgba(0,243,255,0.1)]">
            
            <!-- Messages Area -->
            <div id="chat-messages" class="flex-1 p-6 overflow-y-auto space-y-6 scrollbar-hide">
                <!-- Welcome Message -->
                <div class="flex gap-4 animate-in fade-in slide-in-from-bottom duration-500">
                    <div class="w-8 h-8 rounded-full bg-[#00f3ff]/10 border border-[#00f3ff]/30 flex items-center justify-center shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#00f3ff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a10 10 0 1 0 10 10 4 4 0 0 1-5-5 4 4 0 0 1-5-5"></path><path d="M8.5 8.5v.01"></path><path d="M16 12v.01"></path><path d="M12 16v.01"></path></svg>
                    </div>
                    <div class="flex flex-col gap-1 max-w-[80%]">
                        <span class="text-[10px] uppercase tracking-widest text-[#00f3ff]/50">Txchya OS</span>
                        <div class="p-4 rounded-r-lg rounded-bl-lg bg-[#00f3ff]/5 border border-[#00f3ff]/10 text-sm text-gray-300 shadow-[0_0_15px_rgba(0,243,255,0.05)]">
                            <p>Neural link established. Accessing ecosystem nodes...</p>
                            <p class="mt-2 text-[#00f3ff]/80">I am Txchya. How can I assist you with EverRank, Txchyon, or the wider network?</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Input Area -->
            <div class="p-4 border-t border-[#00f3ff]/10 bg-black/60">
                <form id="chat-form" class="flex gap-2">
                    <div class="relative flex-1">
                        <input 
                            type="text" 
                            id="user-input"
                            placeholder="Input command or query..." 
                            class="w-full bg-[#0a0a0a] border border-[#00f3ff]/20 rounded-lg px-4 py-3 pr-12 text-sm text-white placeholder-gray-600 focus:outline-none focus:border-[#00f3ff]/50 focus:shadow-[0_0_15px_rgba(0,243,255,0.1)] transition-all"
                            autocomplete="off"
                        >
                        <div class="absolute right-3 top-1/2 -translate-y-1/2 w-2 h-2 rounded-full bg-[#00f3ff]/30 animate-pulse"></div>
                    </div>
                    <button 
                        type="submit"
                        class="px-4 py-2 bg-[#00f3ff]/10 border border-[#00f3ff]/30 rounded-lg text-[#00f3ff] hover:bg-[#00f3ff]/20 hover:border-[#00f3ff]/50 transition-all flex items-center justify-center"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="22" y1="2" x2="11" y2="13"></line><polygon points="22 2 15 22 11 13 2 9 22 2"></polygon></svg>
                    </button>
                </form>
                <div class="flex justify-between items-center mt-2 px-1">
                    <span class="text-[10px] text-gray-600 uppercase tracking-wider">v2.4.0 Stable</span>
                    <span class="text-[10px] text-gray-600 uppercase tracking-wider">Encrypted Connection</span>
                </div>
            </div>

        </div>
    </div>
</Layout>

<style>
    @keyframes scanline {
        0% { transform: translateY(-100%); }
        100% { transform: translateY(100%); }
    }
    .animate-scanline {
        animation: scanline 8s linear infinite;
    }
    
    /* Custom Scrollbar */
    #chat-messages::-webkit-scrollbar {
        width: 4px;
    }
    #chat-messages::-webkit-scrollbar-track {
        background: transparent;
    }
    #chat-messages::-webkit-scrollbar-thumb {
        background: #00f3ff30;
        border-radius: 4px;
    }
    #chat-messages::-webkit-scrollbar-thumb:hover {
        background: #00f3ff60;
    }
</style>

<script>
    const chatForm = document.getElementById('chat-form');
    const userInput = document.getElementById('user-input');
    const messagesContainer = document.getElementById('chat-messages');

    if (chatForm && userInput && messagesContainer) {
        chatForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const message = userInput.value.trim();
            if (!message) return;

            // 1. Add User Message
            addMessage(message, 'user');
            userInput.value = '';

            // 2. Add Loading State
            const loadingId = addLoadingMessage();

            try {
                // 3. Call API
                const res = await fetch('/api/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        message: message,
                        site: 'Txchya.com'
                    })
                });
                
                const data = await res.json();
                
                // 4. Remove Loading & Add Response
                removeMessage(loadingId);
                
                if (data.error) {
                    addMessage(`Error: ${data.error}`, 'system');
                } else {
                    addMessage(data.reply, 'ai');
                }

            } catch (err) {
                removeMessage(loadingId);
                addMessage("Connection Failure. Neural link unstable.", 'system');
            }
        });
    }

    function addMessage(text, type) {
        const div = document.createElement('div');
        div.className = `flex gap-4 animate-in fade-in slide-in-from-bottom duration-300 ${type === 'user' ? 'flex-row-reverse' : ''}`;
        
        // Icon
        let icon = '';
        if (type === 'ai') {
            icon = `<div class="w-8 h-8 rounded-full bg-[#00f3ff]/10 border border-[#00f3ff]/30 flex items-center justify-center shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#00f3ff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2a10 10 0 1 0 10 10 4 4 0 0 1-5-5 4 4 0 0 1-5-5"></path><path d="M8.5 8.5v.01"></path><path d="M16 12v.01"></path><path d="M12 16v.01"></path></svg></div>`;
        } else if (type === 'user') {
            icon = `<div class="w-8 h-8 rounded-full bg-white/10 border border-white/20 flex items-center justify-center shrink-0"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg></div>`;
        } else {
             icon = `<div class="w-8 h-8 rounded-full bg-red-500/10 border border-red-500/30 flex items-center justify-center shrink-0">!</div>`;
        }

        // Bubble Style
        let bubbleClass = '';
        if (type === 'ai') {
            bubbleClass = 'bg-[#00f3ff]/5 border border-[#00f3ff]/10 text-gray-300 rounded-r-lg rounded-bl-lg';
        } else if (type === 'user') {
            bubbleClass = 'bg-white/5 border border-white/10 text-white rounded-l-lg rounded-br-lg';
        } else {
             bubbleClass = 'bg-red-500/5 border border-red-500/10 text-red-400 rounded-lg';
        }

        // Markdown-ish Parsing
        let formattedText = text;
        if (type !== 'user') {
            formattedText = formattedText.replace(/\*\*(.*?)\*\*/g, '<strong class="text-[#00f3ff]">$1</strong>');
            formattedText = formattedText.replace(/\n/g, '<br>');
        }

        div.innerHTML = `
            ${icon}
            <div class="flex flex-col gap-1 max-w-[80%]">
                <span class="text-[10px] uppercase tracking-widest opacity-50 ${type === 'user' ? 'text-right' : ''}">${type === 'ai' ? 'Txchya OS' : 'User'}</span>
                <div class="p-4 ${bubbleClass} text-sm shadow-[0_0_15px_rgba(0,0,0,0.2)]">
                    ${formattedText}
                </div>
            </div>
        `;

        messagesContainer.appendChild(div);
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }

    function addLoadingMessage() {
        const id = 'loading-' + Date.now();
        const div = document.createElement('div');
        div.id = id;
        div.className = 'flex gap-4 animate-in fade-in slide-in-from-bottom duration-300';
        div.innerHTML = `
            <div class="w-8 h-8 rounded-full bg-[#00f3ff]/10 border border-[#00f3ff]/30 flex items-center justify-center shrink-0 animate-pulse">...</div>
            <div class="flex flex-col gap-1 max-w-[80%]">
                <span class="text-[10px] uppercase tracking-widest opacity-50 text-[#00f3ff]">Processing</span>
                <div class="p-4 bg-[#00f3ff]/5 border border-[#00f3ff]/10 text-sm text-gray-300 rounded-r-lg rounded-bl-lg">
                    <span class="animate-pulse">Analyzing query parameters...</span>
                </div>
            </div>
        `;
        messagesContainer.appendChild(div);
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
        return id;
    }

    function removeMessage(id) {
        const el = document.getElementById(id);
        if (el) el.remove();
    }
</script>