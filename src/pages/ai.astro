---
// src/pages/ai.astro - Decision Intelligence Layer + Functional Chat Console
import BaseLayout from '../layouts/Base.astro';
---

<BaseLayout title="TXCHYA | AI Neuro-OS">
  <!-- Clean, professional styles with CSS variables -->
  <style>
    :root {
      --primary-blue: #00f3ff;
      --primary-purple: #7c3aed;
      --primary-pink: #db2777;
      --dark-bg: #050505;
      --card-bg: rgba(10, 10, 10, 0.8);
      --text-primary: #f1f5f9;
      --text-secondary: #cbd5e1;
      --text-muted: #94a3b8;
      --border-color: rgba(0, 243, 255, 0.2);
    }
    
    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      background: var(--dark-bg);
      color: var(--text-primary);
      font-family: 'Courier New', monospace;
    }
    
    .main-wrapper {
      position: relative;
      width: 100%;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    /* Hero Section */
    .hero-section {
      position: relative;
      width: 100%;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 4rem 1rem;
      overflow: hidden;
    }
    
    .hero-bg {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('/hero99.jpg');
      background-size: cover;
      background-position: center;
      opacity: 0.15;
      z-index: 0;
      filter: saturate(1.5) brightness(0.5);
    }
    
    .grid-pattern {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        linear-gradient(rgba(0, 243, 255, 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 243, 255, 0.03) 1px, transparent 1px);
      background-size: 50px 50px;
      z-index: 1;
    }
    
    .hero-content {
      position: relative;
      z-index: 10;
      width: 100%;
      max-width: 1100px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* AI HUD Header */
    .ai-hud-header {
      position: absolute;
      top: 2rem;
      left: 0;
      right: 0;
      display: flex;
      justify-content: space-between;
      padding: 0 3rem;
      z-index: 100;
    }

    .hud-tag {
       font-size: 10px;
       letter-spacing: 4px;
       text-transform: uppercase;
       color: var(--primary-blue);
       opacity: 0.7;
       font-weight: 800;
    }

    /* Professional Gradient Title */
    .professional-title {
      font-family: 'Orbitron', 'Inter', sans-serif;
      font-weight: 900;
      font-size: clamp(3rem, 10vw, 6rem);
      line-height: 0.9;
      margin-bottom: 2rem;
      text-align: center;
      letter-spacing: -0.05em;
    }
    
    .title-gradient {
      background: linear-gradient(90deg, #fff, #00f3ff, #7c3aed);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      display: inline-block;
      text-shadow: 0 0 30px rgba(0, 243, 255, 0.3);
    }
    
    .subtitle {
      font-size: 1.1rem;
      color: var(--text-secondary);
      line-height: 1.6;
      max-width: 650px;
      margin: 0 auto 3rem;
      text-align: center;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      opacity: 0.8;
    }

    /* AI TERMINAL BOX */
    .ai-terminal {
      width: 100%;
      max-width: 800px;
      background: rgba(0, 0, 0, 0.7);
      backdrop-filter: blur(20px);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      box-shadow: 0 0 50px rgba(0, 243, 255, 0.1), inset 0 0 20px rgba(0, 243, 255, 0.05);
      height: 450px;
      margin-bottom: 4rem;
      transition: all 0.5s ease;
    }

    .terminal-header {
      padding: 0.75rem 1.5rem;
      background: rgba(0, 243, 255, 0.05);
      border-bottom: 1px solid var(--border-color);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .terminal-status {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 10px;
      color: var(--primary-blue);
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    .terminal-messages {
      flex: 1;
      padding: 2rem;
      overflow-y: auto;
      font-size: 13px;
      line-height: 1.6;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    /* Message Styles */
    .msg-bot {
      color: var(--primary-blue);
      border-left: 2px solid var(--primary-blue);
      padding-left: 1rem;
    }

    .msg-user {
      color: #fff;
      text-align: right;
      border-right: 2px solid #fff;
      padding-right: 1rem;
      align-self: flex-end;
    }

    /* Input Area */
    .terminal-input-container {
      padding: 1.5rem;
      border-top: 1px solid var(--border-color);
      background: rgba(0, 0, 0, 0.5);
    }

    .input-wrapper {
      display: flex;
      gap: 1rem;
      position: relative;
    }

    .terminal-input {
      flex: 1;
      background: transparent;
      border: none;
      border-bottom: 1px solid var(--border-color);
      color: #fff;
      padding: 0.75rem 0;
      font-family: inherit;
      font-size: 14px;
      outline: none;
      transition: all 0.3s ease;
    }

    .terminal-input:focus {
      border-color: #fff;
    }

    .terminal-input::placeholder {
      color: rgba(255,255,255,0.2);
    }

    .terminal-submit {
      background: var(--primary-blue);
      color: #000;
      border: none;
      border-radius: 4px;
      padding: 0 1.5rem;
      font-weight: 900;
      font-size: 11px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .terminal-submit:hover {
      background: #fff;
      box-shadow: 0 0 20px rgba(0, 243, 255, 0.5);
    }

    /* Domains Grid (Lower Section) */
    .domains-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.5rem;
      width: 100%;
      margin-top: 2rem;
    }
    
    .domain-card {
      background: rgba(10, 10, 10, 0.4);
      border: 1px solid var(--border-color);
      border-radius: 8px;
      padding: 2rem;
      text-decoration: none;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }
    
    .domain-card:hover {
      background: rgba(0, 243, 255, 0.05);
      border-color: var(--primary-blue);
      transform: translateY(-5px);
       box-shadow: 0 10px 30px rgba(0, 243, 255, 0.1);
    }
    
    .domain-icon {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      display: block;
      color: var(--primary-blue);
    }
    
    .domain-title {
      font-weight: 800;
      font-size: 1rem;
      color: #fff;
      margin-bottom: 0.5rem;
      letter-spacing: 1px;
      text-transform: uppercase;
    }
    
    .domain-desc {
      font-size: 11px;
      color: var(--text-muted);
      line-height: 1.6;
    }

    /* Scrollbar */
    .scrollbar-hide::-webkit-scrollbar { width: 4px; }
    .scrollbar-hide::-webkit-scrollbar-track { background: transparent; }
    .scrollbar-hide::-webkit-scrollbar-thumb { background: var(--primary-blue); border-radius: 10px; }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .animate-up { animation: fadeInUp 0.8s ease-out forwards; }
  </style>

  <div class="main-wrapper">
    <!-- Header HUD -->
    <div class="ai-hud-header">
       <span class="hud-tag">Sector_AI // NEURO_OS</span>
       <span class="hud-tag">System_Status: Optimal</span>
    </div>

    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-bg"></div>
      <div class="grid-pattern"></div>
      
      <div class="hero-content">
        <!-- Main Title -->
        <h1 class="professional-title animate-up">
          <span class="title-gradient">TXCHYA_CORE</span>
        </h1>
        
        <!-- Subtitle -->
        <p class="subtitle animate-up" style="animation-delay: 0.1s">
          Decision Intelligence Infrastructure // Verified Knowledge Hub
        </p>
        
        <!-- AI TERMINAL -->
        <div class="ai-terminal animate-up" style="animation-delay: 0.3s">
          <div class="terminal-header">
            <div class="terminal-status">
              <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-cyan-500"></span>
              </span>
              Neural_Link Established
            </div>
            <div class="hud-tag" style="opacity: 0.3; letter-spacing: 1px;">Session_ID: TX-{Math.floor(Math.random()*9999)}</div>
          </div>
          
          <div id="terminal-messages" class="terminal-messages scrollbar-hide">
            <div class="msg-bot">
               > SYSTEM INITIALIZED.<br/>
               > VERIFIED_KNOWLEDGE_LOADED.<br/>
               > I AM TXCHYA. WHAT DO YOU NEED HELP WITH RIGHT NOW?
            </div>
          </div>
          
          <div class="terminal-input-container">
            <form id="terminal-form" class="input-wrapper">
              <input 
                type="text" 
                id="terminal-input" 
                class="terminal-input" 
                placeholder="INPUT QUERY (E.G. 'I NEED A TRUSTWORTHY ROOFING COMPANY')..."
                autocomplete="off"
              >
              <button type="submit" class="terminal-submit">Execute</button>
            </form>
          </div>
        </div>
        
        <!-- Domains Section -->
        <div class="w-full animate-up" style="animation-delay: 0.5s">
          <div class="flex items-center gap-4 mb-8">
            <div class="h-[1px] flex-1 bg-gradient-to-r from-transparent to-cyan-500 opacity-20"></div>
            <h2 class="hud-tag" style="opacity: 1; letter-spacing: 6px;">Available_Nodes</h2>
            <div class="h-[1px] flex-1 bg-gradient-to-l from-transparent to-cyan-500 opacity-20"></div>
          </div>
          
          <div class="domains-grid">
            <a href="/legal" class="domain-card">
              <span class="domain-icon">⚖️</span>
              <h3 class="domain-title">Legal & Claims</h3>
              <p class="domain-desc">Verified guidance and vetted attorney connections.</p>
            </a>
            
            <a href="/home" class="domain-card">
              <span class="domain-icon">🏠</span>
              <h3 class="domain-title">Home & Property</h3>
              <p class="domain-desc">Trustworthy contractors and property decisions.</p>
            </a>
            
            <a href="/finance" class="domain-card">
              <span class="domain-icon">💰</span>
              <h3 class="domain-title">Finance & DeFi</h3>
              <p class="domain-desc">Vetted strategies and service providers.</p>
            </a>
            
            <a href="/music" class="domain-card">
              <span class="domain-icon">🎵</span>
              <h3 class="domain-title">Sonic Nodes</h3>
              <p class="domain-desc">Audio transmissions and discography access.</p>
            </a>
          </div>
        </div>
      </div>
    </section>
  </div>

  <script>
    // Configuration
    const API_ENDPOINT = '/api/chat';
    const SITE_CONTEXT = 'Txchya.com (Full Core)';

    const form = document.getElementById('terminal-form');
    const input = document.getElementById('terminal-input');
    const logs = document.getElementById('terminal-messages');

    let isTyping = false;

    function addLog(text, sender) {
      const div = document.createElement('div');
      div.className = sender === 'user' ? 'msg-user' : 'msg-bot';
      
      if (sender === 'bot') {
        const prefix = document.createElement('span');
        prefix.textContent = '> ';
        div.appendChild(prefix);
        
        const content = document.createElement('span');
        // Handle basic formatting
        content.innerHTML = text.replace(/\*\*(.*?)\*\*/g, '<b>$1</b>').replace(/\n/g, '<br/>');
        div.appendChild(content);
      } else {
        div.textContent = text;
      }

      logs.appendChild(div);
      logs.scrollTop = logs.scrollHeight;
    }

    async function handleQuery(e) {
      e?.preventDefault();
      if (isTyping || !input.value.trim()) return;

      const query = input.value.trim();
      input.value = '';
      isTyping = true;

      addLog(query, 'user');

      // Add typing indicator
      const loader = document.createElement('div');
      loader.className = 'msg-bot';
      loader.innerHTML = '> PROCESSING QUERY<span class="animate-pulse">...</span>';
      logs.appendChild(loader);
      logs.scrollTop = logs.scrollHeight;

      try {
        const res = await fetch(API_ENDPOINT, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
              message: query,
              site: SITE_CONTEXT
          })
        });
        
        const data = await res.json();
        loader.remove();

        if (data.error) {
          addLog(`SYSTEM ERROR: ${data.error}`, 'bot');
        } else {
          addLog(data.reply, 'bot');
        }
      } catch (err) {
        loader.remove();
        addLog('NEURAL LINK FAILED. CHECK SYSTEM CONNECTION.', 'bot');
      } finally {
        isTyping = false;
        input.focus();
      }
    }

    form?.addEventListener('submit', handleQuery);
    
    // Check for query param in URL
    const urlParams = new URLSearchParams(window.location.search);
    const initialQuery = urlParams.get('q');
    if (initialQuery) {
        input.value = initialQuery;
        // Small delay to ensure animations finish
        setTimeout(() => handleQuery(), 800);
    }
  </script>
</BaseLayout>