---
// src/pages/ai.astro - Professional UI with Mode-Based Accents + Chat History Sidebar
import BaseLayout from '../layouts/Base.astro';
---

<BaseLayout title="TXCHYA | Decision Intelligence Layer">
  <style>
    :root {
      --primary-accent: #2563eb; /* Blue for Light Mode */
      --hero-bg-opacity: 0.7;
      --sidebar-bg: rgba(255, 255, 255, 0.8);
    }

    html.dark {
      --primary-accent: #00f3ff; /* Cyan for Dark Mode */
      --hero-bg-opacity: 0.2;
      --sidebar-bg: rgba(10, 10, 10, 0.8);
    }

    .main-wrapper {
      position: relative;
      min-height: 100vh;
      display: block; /* Removed flex to allow overlapping */
      overflow: hidden;
    }

    /* Sidebar - Transparent Overlay */
    .chat-sidebar {
      position: fixed;
      left: 0;
      top: 0;
      width: 280px;
      height: 100vh;
      background: rgba(255, 255, 255, 0.03); /* Highly transparent */
      backdrop-filter: blur(8px);
      border-right: 1px solid rgba(0, 0, 0, 0.05);
      display: flex;
      flex-direction: column;
      z-index: 100;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .chat-sidebar:hover {
        background: rgba(255, 255, 255, 0.1); /* Subtle highlight on hover */
        width: 300px;
    }

    html.dark .chat-sidebar {
      background: rgba(0, 0, 0, 0.2);
      border-color: rgba(0, 243, 255, 0.05);
    }

    html.dark .chat-sidebar:hover {
        background: rgba(0, 243, 255, 0.05);
    }

    .sidebar-header {
      padding: 1.5rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      font-weight: 800;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 2px;
      opacity: 0.4;
      transition: opacity 0.3s ease;
    }

    .chat-sidebar:hover .sidebar-header {
        opacity: 0.8;
    }

    .history-list {
      flex: 1;
      overflow-y: auto;
      padding: 1rem;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      opacity: 0.3;
      transition: opacity 0.3s ease;
    }

    .chat-sidebar:hover .history-list {
        opacity: 1;
    }

    .history-item {
      padding: 0.75rem 1rem;
      border-radius: 10px;
      cursor: pointer;
      font-size: 0.8rem;
      transition: all 0.2s ease;
      background: rgba(0, 0, 0, 0.02);
      border: 1px solid transparent;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .history-item:hover {
      background: rgba(37, 99, 235, 0.05);
      border-color: rgba(37, 99, 235, 0.1);
    }

    html.dark .history-item {
      background: rgba(255, 255, 255, 0.02);
    }

    html.dark .history-item:hover {
      background: rgba(0, 243, 255, 0.05);
      border-color: rgba(0, 243, 255, 0.1);
    }

    .new-chat-btn {
      margin: 1rem;
      padding: 0.75rem;
      background: var(--primary-accent);
      color: white;
      border: none;
      border-radius: 10px;
      font-weight: 700;
      font-size: 0.8rem;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    /* Main Content */
    .content-area {
      flex: 1;
      height: 100vh;
      overflow-y: auto;
      position: relative;
    }

    .hero-section {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 4rem 1rem;
    }

    .hero-bg {
      position: absolute;
      inset: 0;
      background-image: url('/hero99.jpg');
      background-size: cover;
      background-position: center;
      opacity: var(--hero-bg-opacity);
      z-index: 0;
    }

    .grid-pattern {
      position: absolute;
      inset: 0;
      background-image: 
        linear-gradient(rgba(37, 99, 235, 0.05) 1px, transparent 1px),
        linear-gradient(90deg, rgba(37, 99, 235, 0.05) 1px, transparent 1px);
      background-size: 50px 50px;
      z-index: 1;
    }

    .hero-content {
      position: relative;
      z-index: 10;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      justify-content: center;
    }

    .title-gradient {
      position: absolute; /* Floating background */
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 100%;
      font-size: clamp(6rem, 25vw, 15rem); /* EVEN BIGGER */
      font-weight: 900;
      line-height: 0.7;
      margin: 0;
      text-align: center;
      font-family: 'Orbitron', sans-serif;
      letter-spacing: -0.05em;
      background: linear-gradient(90deg, #1e293b, #2563eb);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      opacity: 0.1; /* Very subtle background layer */
      z-index: -1;
      pointer-events: none;
      white-space: nowrap;
    }

    html.dark .title-gradient {
      background: linear-gradient(90deg, #fff, #00f3ff, #7c3aed);
      opacity: 0.15;
      text-shadow: 0 0 100px rgba(0, 243, 255, 0.1);
    }

    .subtitle {
      font-size: 0.75rem;
      text-align: center;
      margin-bottom: 2rem;
      opacity: 0.4;
      letter-spacing: 8px;
      text-transform: uppercase;
      font-weight: 900;
    }

    /* AI CONSOLE - Floating over background title */
    .ai-console {
      width: 100%;
      position: relative;
      z-index: 20;
      background: rgba(255, 255, 255, 0.85);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(0, 0, 0, 0.1);
      border-radius: 20px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      height: 550px;
      box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1);
    }

    html.dark .ai-console {
      background: rgba(0, 0, 0, 0.7);
      border-color: rgba(0, 243, 255, 0.2);
    }

    .console-header {
      padding: 0.75rem 1.5rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
      background: rgba(0, 0, 0, 0.02);
    }

    .console-messages {
      flex: 1;
      padding: 2rem;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .msg {
      max-width: 85%;
      padding: 1rem 1.25rem;
      border-radius: 12px;
      font-size: 13px;
      line-height: 1.6;
    }

    .msg-bot {
      align-self: flex-start;
      background: rgba(0, 0, 0, 0.03);
      border: 1px solid rgba(0, 0, 0, 0.05);
    }

    html.dark .msg-bot {
      background: rgba(0, 243, 255, 0.05);
      border-color: rgba(0, 243, 255, 0.2);
      color: #00f3ff;
      border-left: 2px solid #00f3ff;
      border-radius: 4px;
    }

    .msg-user {
      align-self: flex-end;
      background: var(--primary-accent);
      color: white;
    }

    .console-input-area {
      padding: 1.5rem;
      border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    .input-wrapper { display: flex; gap: 1rem; }

    .console-input {
      flex: 1;
      background: transparent;
      border: none;
      border-bottom: 2px solid rgba(0, 0, 0, 0.1);
      padding: 0.5rem 0;
      font-family: 'Courier New', monospace;
      outline: none;
    }

    html.dark .console-input {
      border-color: rgba(0, 243, 255, 0.2);
      color: #fff;
    }

    .console-submit {
      background: var(--primary-accent);
      color: white;
      border: none;
      border-radius: 8px;
      padding: 0 1.5rem;
      font-weight: 800;
      cursor: pointer;
    }

    /* Mobile Toggle for Sidebar */
    .sidebar-toggle {
        display: none;
        position: fixed;
        top: 1rem;
        left: 1rem;
        z-index: 200;
        background: var(--primary-accent);
        color: white;
        padding: 0.5rem;
        border-radius: 5px;
    }

    @media (max-width: 768px) {
        .chat-sidebar {
            position: absolute;
            transform: translateX(-100%);
        }
        .chat-sidebar.open {
            transform: translateX(0);
        }
        .sidebar-toggle {
            display: block;
        }
    }

    .scrollbar-hide::-webkit-scrollbar { width: 4px; }
    .scrollbar-hide::-webkit-scrollbar-thumb { background: var(--primary-accent); border-radius: 10px; }
  </style>

  <div class="main-wrapper">
    <!-- Sidebar Toggle (Mobile) -->
    <button class="sidebar-toggle" id="mobileSidebarToggle">☰</button>

    <!-- Sidebar -->
    <aside class="chat-sidebar" id="sidebar">
      <div class="sidebar-header">Stored Communications</div>
      <button class="new-chat-btn" id="newChatBtn">+ New Session</button>
      <div class="history-list scrollbar-hide" id="historyList">
        <!-- History items injected here -->
      </div>
    </aside>

    <!-- Main Content -->
    <main class="content-area">
      <section class="hero-section">
        <div class="hero-bg"></div>
        <div class="grid-pattern"></div>

        <div class="hero-content">
          <h1 class="title-gradient">TXCHYA_CORE</h1>
          <p class="subtitle">Decision Intelligence Layer // Neural Interface</p>

          <div class="ai-console">
            <div class="console-header">
              <div style="font-size: 10px; font-weight: 800; color: var(--primary-accent); letter-spacing: 2px;">NEURAL_LINK: ACTIVE</div>
            <div style="display: flex; gap: 0.75rem; align-items: center;">
                <!-- Opacity Controller -->
                <div style="display: flex; align-items: center; gap: 0.5rem; margin-right: 0.5rem;">
                   <span style="font-size: 8px; opacity: 0.5;">OPACITY</span>
                   <input type="range" id="opacitySlider" min="5" max="100" value="85" style="width: 50px; height: 3px; cursor: pointer; accent-color: var(--primary-accent);" />
                </div>
                <button id="clearHistoryBtn" style="font-size: 9px; cursor: pointer; color: var(--primary-accent); background: none; border: 1px solid var(--primary-accent); padding: 2px 6px; border-radius: 4px;">PURGE</button>
                <div id="sessionLabel" style="font-size: 9px; opacity: 0.4;">SESSION: NEW</div>
              </div>
            </div>

            <div id="console-messages" class="console-messages scrollbar-hide">
               <div class="msg msg-bot">> SYSTEM INITIALIZED.<br/>> WAITING FOR INPUT...</div>
            </div>

            <div class="console-input-area">
              <form id="console-form" class="input-wrapper">
                <input type="text" id="console-input" class="console-input" placeholder="INPUT QUERY..." autocomplete="off" />
                <button type="submit" class="console-submit">EXECUTE</button>
              </form>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>

  <script>
    // Advanced Multi-Session Tracking
    const STORAGE_KEY = 'txchya_sessions_v2';
    const form = document.getElementById('console-form');
    const input = document.getElementById('console-input');
    const logs = document.getElementById('console-messages');
    const historyList = document.getElementById('historyList');
    const sessionLabel = document.getElementById('sessionLabel');

    let sessions = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
    let currentSessionId = null;
    let processing = false;

    function saveSessions() {
        localStorage.setItem(STORAGE_KEY, JSON.stringify(sessions));
        renderHistory();
    }

    function createNewSession() {
        currentSessionId = Date.now().toString();
        const newSession = {
            id: currentSessionId,
            title: 'New Conversation',
            messages: [{ text: 'Greetings. I am Txchya. How can I assist?', isBot: true }]
        };
        sessions.unshift(newSession);
        saveSessions();
        loadSession(currentSessionId);
    }

    function loadSession(id) {
        currentSessionId = id;
        const session = sessions.find(s => s.id === id);
        if (!session) return;

        sessionLabel.textContent = `SESSION: ${id.slice(-4)}`;
        logs.innerHTML = '';
        session.messages.forEach(m => {
            const div = document.createElement('div');
            div.className = `msg ${m.isBot ? 'msg-bot' : 'msg-user'}`;
            div.innerHTML = (m.isBot ? '> ' : '') + m.text.replace(/\n/g, '<br/>');
            logs.appendChild(div);
        });
        logs.scrollTop = logs.scrollHeight;
        
        // Mark active
        document.querySelectorAll('.history-item').forEach(el => {
            el.style.background = '';
            if (el.dataset.id === id) el.style.background = 'rgba(0, 243, 255, 0.1)';
        });
    }

    function renderHistory() {
        historyList.innerHTML = '';
        sessions.forEach(s => {
            const item = document.createElement('div');
            item.className = 'history-item';
            item.textContent = s.title;
            item.dataset.id = s.id;
            item.onclick = () => loadSession(s.id);
            historyList.appendChild(item);
        });
    }

    async function handle(e) {
        e?.preventDefault();
        const val = input.value.trim();
        if(!val || processing) return;

        if(!currentSessionId) createNewSession();

        input.value = '';
        processing = true;

        // Update local session data
        const session = sessions.find(s => s.id === currentSessionId);
        session.messages.push({ text: val, isBot: false });
        
        // Update title if it's the first message
        if (session.title === 'New Conversation') {
            session.title = val.slice(0, 30) + (val.length > 30 ? '...' : '');
        }
        
        loadSession(currentSessionId);

        const loader = document.createElement('div');
        loader.className = 'msg msg-bot';
        loader.textContent = '> ANALYZING...';
        logs.appendChild(loader);

        try {
            const res = await fetch('/api/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message: val, site: 'Txchya Core' })
            });
            const data = await res.json();
            loader.remove();
            
            const reply = data.reply || 'LINK FAILED';
            session.messages.push({ text: reply, isBot: true });
            saveSessions();
            loadSession(currentSessionId);
        } catch (err) {
            loader.remove();
            const errDiv = document.createElement('div');
            errDiv.className = 'msg msg-bot';
            errDiv.textContent = '> NEURAL ERROR';
            logs.appendChild(errDiv);
        } finally {
            processing = false;
        }
    }

    form?.addEventListener('submit', handle);
    document.getElementById('newChatBtn')?.addEventListener('click', createNewSession);
    document.getElementById('clearHistoryBtn')?.addEventListener('click', () => {
        if(confirm('Purge all stored communications?')) {
            sessions = [];
            localStorage.removeItem(STORAGE_KEY);
            logs.innerHTML = '<div class="msg msg-bot">> PURGE COMPLETE.<br/>> NEURAL INTERFACE RESET.</div>';
            renderHistory();
            currentSessionId = null;
        }
    });

    // Mobile Toggle
    const sidebar = document.getElementById('sidebar');
    document.getElementById('mobileSidebarToggle')?.addEventListener('click', () => {
        sidebar.classList.toggle('open');
    });

    // Opacity Logic
    const opacitySlider = document.getElementById('opacitySlider');
    const aiConsole = document.querySelector('.ai-console');
    
    opacitySlider?.addEventListener('input', (e) => {
        const val = e.target.value;
        const opacity = val / 100;
        if (aiConsole) {
            const isDark = document.documentElement.classList.contains('dark');
            const baseColor = isDark ? '0, 0, 0' : '255, 255, 255';
            aiConsole.style.background = `rgba(${baseColor}, ${opacity})`;
        }
    });

    // Initial Load
    if (sessions.length > 0) {
        loadSession(sessions[0].id);
    } else {
        createNewSession();
    }

    renderHistory();
  </script>
</BaseLayout>