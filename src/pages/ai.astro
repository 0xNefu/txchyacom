// src/pages/ai.astro - Professional UI with Mode-Based Accents + Chat History Sidebar
import BaseLayout from '../layouts/Base.astro';
import fs from 'node:fs';
import path from 'node:path';

const publicDir = path.join(process.cwd(), 'public');
const musicDir = path.join(publicDir, 'music');
const bgDir = path.join(publicDir, 'backgrounds');

let musicTracks = [];
try {
    musicTracks = fs.readdirSync(musicDir)
        .filter(file => file.endsWith('.mp3'))
        .map(file => `/music/${file}`);
} catch (e) { console.error("Music directory not found"); }

let bgFiles = [];
try {
    bgFiles = fs.readdirSync(bgDir)
        .filter(file => /\.(jpg|jpeg|png|webp)$/i.test(file))
        .map(file => `/backgrounds/${file}`);
} catch (e) { 
    console.error("Backgrounds directory not found, using root fallback");
    bgFiles = fs.readdirSync(publicDir)
        .filter(file => /\.(jpg|jpeg|png|webp)$/i.test(file) && !file.includes('favicon') && !file.includes('logo'))
        .map(file => `/${file}`);
}
