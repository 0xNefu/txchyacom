  <script>
    // Advanced Multi-Session Tracking
    const STORAGE_KEY = 'txchya_sessions_v2';
    const form = document.getElementById('console-form');
    const input = document.getElementById('console-input');
    const logs = document.getElementById('console-messages');
    const historyList = document.getElementById('historyList');
    const sessionLabel = document.getElementById('sessionLabel');

    let sessions = JSON.parse(localStorage.getItem(STORAGE_KEY) || '[]');
    let currentSessionId = null;
    let processing = false;

    function saveSessions() {
        localStorage.setItem(STORAGE_KEY, JSON.stringify(sessions));
        renderHistory();
    }

    function createNewSession() {
        currentSessionId = Date.now().toString();
        const newSession = {
            id: currentSessionId,
            title: 'New Conversation',
            messages: [{ text: 'Greetings. I am Txchya. How can I assist?', isBot: true }]
        };
        sessions.unshift(newSession);
        saveSessions();
        loadSession(currentSessionId);
    }

    function loadSession(id) {
        currentSessionId = id;
        const session = sessions.find(s => s.id === id);
        if (!session) return;

        sessionLabel.textContent = `SESSION: ${id.slice(-4)}`;
        logs.innerHTML = '';
        session.messages.forEach(m => {
            const div = document.createElement('div');
            div.className = `msg ${m.isBot ? 'msg-bot' : 'msg-user'}`;
            div.innerHTML = (m.isBot ? '> ' : '') + m.text.replace(/\n/g, '<br/>');
            logs.appendChild(div);
        });
        logs.scrollTop = logs.scrollHeight;
        
        // Mark active
        document.querySelectorAll('.history-item').forEach(el => {
            el.style.background = '';
            if (el.dataset.id === id) el.style.background = 'rgba(0, 243, 255, 0.1)';
        });
    }

    function renderHistory() {
        historyList.innerHTML = '';
        sessions.forEach(s => {
            const item = document.createElement('div');
            item.className = 'history-item';
            item.textContent = s.title;
            item.dataset.id = s.id;
            item.onclick = () => loadSession(s.id);
            historyList.appendChild(item);
        });
    }

    async function handle(e) {
        e?.preventDefault();
        const val = input.value.trim();
        if(!val || processing) return;

        if(!currentSessionId) createNewSession();

        input.value = '';
        processing = true;

        // Update local session data
        const session = sessions.find(s => s.id === currentSessionId);
        session.messages.push({ text: val, isBot: false });
        
        // Update title if it's the first message
        if (session.title === 'New Conversation') {
            session.title = val.slice(0, 30) + (val.length > 30 ? '...' : '');
        }
        
        loadSession(currentSessionId);

        const loader = document.createElement('div');
        loader.className = 'msg msg-bot';
        loader.textContent = '> ANALYZING...';
        logs.appendChild(loader);

        try {
            const res = await fetch('/api/chat', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ message: val, site: 'Txchya Core' })
            });
            const data = await res.json();
            loader.remove();
            
            const reply = data.reply || 'LINK FAILED';
            session.messages.push({ text: reply, isBot: true });
            saveSessions();
            loadSession(currentSessionId);
        } catch (err) {
            loader.remove();
            const errDiv = document.createElement('div');
            errDiv.className = 'msg msg-bot';
            errDiv.textContent = '> NEURAL ERROR';
            logs.appendChild(errDiv);
        } finally {
            processing = false;
        }
    }

    form?.addEventListener('submit', handle);
    document.getElementById('newChatBtn')?.addEventListener('click', createNewSession);
    document.getElementById('clearHistoryBtn')?.addEventListener('click', () => {
        if(confirm('Purge all stored communications?')) {
            sessions = [];
            localStorage.removeItem(STORAGE_KEY);
            logs.innerHTML = '<div class="msg msg-bot">> PURGE COMPLETE.<br/>> NEURAL INTERFACE RESET.</div>';
            renderHistory();
            currentSessionId = null;
        }
    });

    // Mobile Toggle
    const sidebar = document.getElementById('sidebar');
    document.getElementById('mobileSidebarToggle')?.addEventListener('click', () => {
        sidebar.classList.toggle('open');
    });

    // Ambient Music Logic
    const tracksContainer = document.querySelector('.main-wrapper');
    const tracks = JSON.parse(tracksContainer?.dataset.tracks || '[]');
    
    let currentTrackIndex = 0;
    const audio = tracks.length > 0 ? new Audio(tracks[currentTrackIndex]) : new Audio();
    const playBtn = document.getElementById('playMusic');
    const skipBtn = document.getElementById('skipMusic');
    const timeDisplay = document.getElementById('musicTime');
    let isPlaying = false;

    function formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = Math.floor(seconds % 60);
        return `${mins.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
    }

    function togglePlay() {
        if (isPlaying) {
            audio.pause();
            playBtn.textContent = '►';
            timeDisplay.classList.remove('sonic-active');
        } else {
            audio.play();
            playBtn.textContent = '||';
            timeDisplay.classList.add('sonic-active');
        }
        isPlaying = !isPlaying;
    }

    function skipTrack() {
        currentTrackIndex = (currentTrackIndex + 1) % tracks.length;
        audio.src = tracks[currentTrackIndex];
        if (isPlaying) audio.play();
    }

    playBtn?.addEventListener('click', togglePlay);
    skipBtn?.addEventListener('click', skipTrack);

    audio.addEventListener('timeupdate', () => {
        timeDisplay.textContent = formatTime(audio.currentTime);
    });

    audio.addEventListener('ended', skipTrack);

    // Sidebar Theme Logic
    const sidebarThemeToggle = document.getElementById('sidebarThemeToggle');
    const sidebarThemeLabel = document.getElementById('sidebarThemeLabel');
    
    function updateSidebarThemeUI(isDark) {
        if (isDark) {
            sidebarThemeLabel.textContent = 'AESTHETIC: NEON';
            sidebarThemeToggle.classList.add('active');
        } else {
            sidebarThemeLabel.textContent = 'AESTHETIC: LIGHT';
            sidebarThemeToggle.classList.remove('active');
        }
    }

    updateSidebarThemeUI(document.documentElement.classList.contains('dark'));
    
    sidebarThemeToggle?.addEventListener('click', () => {
        const isDark = document.documentElement.classList.contains('dark');
        if (isDark) {
            document.documentElement.classList.remove('dark');
            localStorage.setItem('theme', 'light');
            updateSidebarThemeUI(false);
        } else {
            document.documentElement.classList.add('dark');
            localStorage.setItem('theme', 'dark');
            updateSidebarThemeUI(true);
        }
    });

    // Background Rotation Logic
    const backgrounds = JSON.parse(tracksContainer?.dataset.bgs || '[]');
    let currentBgIndex = 0;
    let isAutoBg = true;
    const heroBg = document.getElementById('heroBg');
    const bgToggle = document.getElementById('bgModeToggle');
    const bgLabel = document.getElementById('bgModeLabel');
    const skipBgBtn = document.getElementById('skipBg');
    let bgInterval;

    function updateBg() {
        if (!backgrounds || backgrounds.length === 0 || !heroBg) return;
        heroBg.style.backgroundImage = `url(${backgrounds[currentBgIndex]})`;
    }

    function skipBg() {
        currentBgIndex = (currentBgIndex + 1) % backgrounds.length;
        updateBg();
    }

    function startBgInterval() {
        clearInterval(bgInterval);
        // Change every 30 minutes (30 * 60 * 1000)
        bgInterval = setInterval(skipBg, 1800000); 
    }

    bgToggle?.addEventListener('click', () => {
        isAutoBg = !isAutoBg;
        bgToggle.classList.toggle('active', isAutoBg);
        
        if (isAutoBg) {
            bgLabel.textContent = 'AUTO_VISUAL';
            startBgInterval();
        } else {
            bgLabel.textContent = 'MANUAL_VISUAL';
            clearInterval(bgInterval);
        }
    });

    skipBgBtn?.addEventListener('click', skipBg);

    // Initial Start
    if (isAutoBg) startBgInterval();
    updateBg();

    // Opacity Logic
    const opacitySlider = document.getElementById('opacitySlider');
    const aiConsole = document.querySelector('.ai-console');
    const chatSidebar = document.getElementById('sidebar');
    
    opacitySlider?.addEventListener('input', (e) => {
        const val = e.target.value;
        const opacity = val / 100;
        const isDark = document.documentElement.classList.contains('dark');
        const baseColor = isDark ? '0, 0, 0' : '255, 255, 255';
        
        if (aiConsole) {
            aiConsole.style.background = `rgba(${baseColor}, ${opacity})`;
        }
        if (chatSidebar) {
            // Apply similar logic to sidebar, maybe slightly more transparent than console
            chatSidebar.style.background = `rgba(${baseColor}, ${opacity * 0.2})`;
        }
