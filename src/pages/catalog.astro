<Base title="Catalog | TXCHYA">
  <style>
    /* Background setup - SAME AS MAIN PAGE */
    .bg-container {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -100;
    }
    
    .bg-image {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url('/super-punk.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
    }
    
    .bg-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.3);
    }
    
    /* ===== BACK BUTTON ===== */
    .back-button {
      position: fixed;
      top: 25px;
      left: 25px;
      z-index: 1000;
      background: rgba(0, 0, 0, 0.4);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 0, 255, 0.2);
      border-radius: 50%;
      width: 45px;
      height: 45px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
    }
    
    .back-button:hover {
      background: rgba(0, 0, 0, 0.6);
      border-color: rgba(0, 255, 255, 0.4);
      transform: translateX(-3px);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
    }
    
    .back-button:active {
      transform: translateX(-3px) scale(0.95);
    }
    
    .back-arrow {
      color: #00ffff;
      font-size: 1.5rem;
      font-weight: bold;
      line-height: 1;
    }
    
    /* Content */
    .content {
      position: relative;
      z-index: 1;
      min-height: 100vh;
      padding: 100px 0 50px;
    }
    
    /* Cyberpunk Typography - SAME AS MAIN PAGE */
    h1 {
      font-family: 'Orbitron', sans-serif;
      font-weight: 900;
      font-size: clamp(3rem, 10vw, 6rem);
      letter-spacing: -0.05em;
      line-height: 0.9;
      margin-bottom: 2rem;
    }
    
    .title-gradient {
      background: linear-gradient(
        45deg,
        #ff00ff,
        #00ffff,
        #ff00ff,
        #00ffff
      );
      background-size: 400% 400%;
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      display: inline-block;
      animation: gradientShift 8s ease infinite;
    }
    
    @keyframes gradientShift {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    /* Terminal font */
    .terminal {
      font-family: 'Courier New', monospace;
      color: #00ff00;
      font-size: 0.9rem;
      letter-spacing: 1px;
    }
    
    /* Layout */
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 1rem;
    }
    
    .text-center {
      text-align: center;
    }
    
    /* Card styles - MATCHING MAIN PAGE */
    .card {
      background: rgba(0, 0, 0, 0.3);
      border: 1px solid rgba(255, 0, 255, 0.2);
      border-radius: 16px;
      backdrop-filter: blur(10px);
      padding: 2rem;
      margin: 2rem auto;
      max-width: 800px;
    }
    
    /* Catalog Grid */
    .catalog-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      margin: 3rem 0;
    }
    
    .track-item {
      background: rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(255, 0, 255, 0.2);
      border-radius: 12px;
      padding: 1.5rem;
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
    }
    
    .track-item:hover {
      border-color: rgba(0, 255, 255, 0.4);
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }
    
    .track-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 1rem;
    }
    
    .track-icon {
      font-size: 2rem;
      opacity: 0.8;
    }
    
    .track-name {
      font-family: 'Orbitron', sans-serif;
      font-size: 1.3rem;
      color: white;
      margin-bottom: 0.5rem;
    }
    
    .track-series {
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;
      color: rgba(255, 255, 255, 0.6);
      margin-bottom: 0.5rem;
    }
    
    .track-duration {
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;
      color: rgba(0, 255, 255, 0.8);
    }
    
    .track-desc {
      color: rgba(255, 255, 255, 0.7);
      font-family: 'Courier New', monospace;
      font-size: 0.9rem;
      line-height: 1.4;
      margin-bottom: 1rem;
    }
    
    .track-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1.5rem;
    }
    
    .tag {
      font-family: 'Courier New', monospace;
      font-size: 0.7rem;
      padding: 0.3rem 0.6rem;
      border-radius: 20px;
      background: rgba(255, 255, 255, 0.1);
      color: rgba(255, 255, 255, 0.7);
    }
    
    .track-actions {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 1rem;
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    /* Filter buttons */
    .filter-container {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      justify-content: center;
      margin: 2rem 0;
    }
    
    .filter-btn {
      padding: 0.5rem 1rem;
      background: rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(0, 255, 255, 0.3);
      border-radius: 20px;
      color: rgba(255, 255, 255, 0.8);
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .filter-btn:hover {
      border-color: #ff00ff;
      background: rgba(0, 0, 0, 0.6);
    }
    
    .filter-btn.active {
      background: rgba(0, 255, 255, 0.2);
      border-color: #00ffff;
      color: #00ffff;
    }
    
    /* Action buttons */
    .action-btn {
      padding: 0.5rem 1rem;
      background: transparent;
      border: 1px solid;
      border-radius: 6px;
      font-family: 'Courier New', monospace;
      font-size: 0.8rem;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 0.3rem;
    }
    
    .listen-btn {
      border-color: rgba(0, 255, 255, 0.5);
      color: #00ffff;
    }
    
    .listen-btn:hover {
      background: rgba(0, 255, 255, 0.1);
    }
    
    .license-btn {
      border-color: rgba(255, 0, 255, 0.5);
      color: #ff00ff;
    }
    
    .license-btn:hover {
      background: rgba(255, 0, 255, 0.1);
    }
    
    /* Pagination */
    .pagination {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 1rem;
      margin-top: 3rem;
      font-family: 'Courier New', monospace;
    }
    
    .page-btn {
      padding: 0.5rem 1rem;
      background: rgba(0, 0, 0, 0.4);
      border: 1px solid rgba(255, 0, 255, 0.3);
      border-radius: 6px;
      color: rgba(255, 255, 255, 0.8);
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .page-btn:hover:not(:disabled) {
      border-color: #00ffff;
      color: #00ffff;
    }
    
    .page-btn:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }
    
    .page-info {
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.9rem;
    }
    
    /* Stats */
    .stats {
      display: flex;
      justify-content: center;
      gap: 3rem;
      margin: 2rem 0;
      font-family: 'Courier New', monospace;
    }
    
    .stat-item {
      text-align: center;
    }
    
    .stat-number {
      font-size: 2rem;
      font-weight: bold;
      color: #00ffff;
      margin-bottom: 0.5rem;
    }
    
    .stat-label {
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.6);
    }
  </style>

