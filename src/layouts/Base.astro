---
const title = Astro.props.title || "Txchya | Cyberpunk Ambient Artist";
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  
  <!-- Cyberpunk Meta Tags -->
  <meta name="theme-color" content="#000000">
  <meta name="description" content="Txchya - Cyberpunk Ambient AI Music Artist. Stream 'Vibe Coding' album on all platforms.">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <!-- Tailwind + Cyberpunk Styles -->
  <style global>
    /* Tailwind CSS */
    @import "tailwindcss";
    
    /* FORCE BLACK BACKGROUND */
    html, body {
      background-color: #000000 !important;
      color: #ffffff !important;
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
    }
    
    /* Cyberpunk Scrollbar */
    ::-webkit-scrollbar {
      width: 12px;
      height: 12px;
    }
    
    ::-webkit-scrollbar-track {
      background: rgba(10, 10, 10, 0.8);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(0, 255, 255, 0.1);
      border-radius: 6px;
    }
    
    ::-webkit-scrollbar-thumb {
      background: linear-gradient(45deg, #00ffff, #9d00ff, #ff00ff);
      border-radius: 6px;
      border: 2px solid rgba(10, 10, 10, 0.5);
      box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(45deg, #ff00ff, #9d00ff, #00ffff);
      box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3), 0 0 10px rgba(0, 255, 255, 0.5);
    }
    
    /* Cyberpunk link styles */
    a {
      position: relative;
      color: #00ffff;
      text-decoration: none;
    }
    
    a:hover {
      color: #ff00ff;
      text-shadow: 0 0 10px rgba(255, 0, 255, 0.5);
    }
    
    a::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 1px;
      background: linear-gradient(90deg, #00ffff, #ff00ff);
      transition: width 0.3s ease;
    }
    
    a:hover::after {
      width: 100%;
    }
    
    /* Cyberpunk animations */
    @keyframes gradient {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }
    
    @keyframes scan {
      0% { transform: translateY(-100%); }
      100% { transform: translateY(100vh); }
    }
  </style>
</head>
<body class="font-inter">
  <slot />
  
  <!-- Cyberpunk Background Effects -->
  <div class="fixed inset-0 pointer-events-none z-[-1] overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 rounded-full bg-cyber-purple/10 blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 rounded-full bg-cyber-cyan/10 blur-3xl animate-pulse delay-1000"></div>
    
    <!-- Grid overlay -->
    <div class="absolute inset-0 opacity-10" style="
      background-image: 
        linear-gradient(rgba(0, 255, 255, 0.3) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 255, 0.3) 1px, transparent 1px);
      background-size: 50px 50px;
    "></div>
  </div>
</body>
</html>