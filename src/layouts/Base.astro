---
const title = Astro.props.title || "Txchya | Cyberpunk Ambient Artist";
const siteUrl = "https://txchya.com";
const defaultDescription = "Txchya - Cyberpunk Ambient AI Music Artist. Dark synthwave, dystopian soundscapes. Stream 'Vibe Coding' album on all platforms.";
const description = Astro.props.description || defaultDescription;
const ogImage = Astro.props.ogImage || `${siteUrl}/og-image.jpg`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  
  <!-- CDN Tailwind - RESTORING TO WHAT WORKED -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            primary: ['Orbitron', 'sans-serif'],
            mono: ['Courier New', 'monospace'],
          },
          colors: {
            cyber: {
              pink: '#ff00ff',
              purple: '#9d00ff',
              cyan: '#00ffff'
            }
          }
        }
      }
    }
  </script>

  <!-- Theme & Description -->
  <meta name="theme-color" content="#000000">
  <meta name="description" content={description}>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400..900&display=swap" rel="stylesheet">
  
  <style>
    :root {
      --bg-color: #ffffff;
      --text-color: #0f172a;
      --accent-color: #2563eb;
    }

    html.dark {
      --bg-color: #000000;
      --text-color: #ffffff;
      --accent-color: #00ffff;
    }

    * { margin: 0; padding: 0; box-sizing: border-box; }
    
    html, body {
      background: var(--bg-color);
      color: var(--text-color);
      font-family: 'Courier New', monospace;
      min-height: 100vh;
      overflow-x: hidden;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    /* Custom scrollbar */
    ::-webkit-scrollbar { width: 6px; }
    ::-webkit-scrollbar-track { background: rgba(0, 0, 0, 0.1); }
    ::-webkit-scrollbar-thumb {
      background: linear-gradient(to bottom, #ff00ff, #9d00ff, #00ffff);
      border-radius: 4px;
    }

    /* Cyberpunk colors */
    .cyber-pink { color: #ff00ff; }
    .cyber-purple { color: #9d00ff; }
    .cyber-cyan { color: #00ffff; }
    .cyber-green { color: #00ff00; }
    
    /* Selection */
    ::selection {
      background: rgba(255, 0, 255, 0.3);
      color: white;
    }
    
    /* Backdrop blur */
    .glass {
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      background: rgba(0, 0, 0, 0.2);
    }
    
    /* Animations */
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
    
    @keyframes glitch {
      0% { transform: translate(0); }
      20% { transform: translate(-2px, 2px); }
      40% { transform: translate(-2px, -2px); }
      60% { transform: translate(2px, 2px); }
      80% { transform: translate(2px, -2px); }
      100% { transform: translate(0); }
    }
    
    .pulse {
      animation: pulse 1s infinite;
    }

    .glitch {
      animation: glitch 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94) both infinite;
    }

    /* Scanline effect - Only visible in dark mode */
    .scanline {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 2px;
      background: linear-gradient(90deg, transparent, #00ffff, #ff00ff, transparent);
      animation: scanline 10s linear infinite;
      pointer-events: none;
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
    }

    html.dark .scanline {
      opacity: 0.3;
      visibility: visible;
    }

    @keyframes scanline {
      0% { transform: translateY(-100%); }
      100% { transform: translateY(100vh); }
    }
  </style>

  <script is:inline>
    // Theme toggle logic
    const theme = (() => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        return localStorage.getItem('theme');
      }
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      return 'dark'; // Default to dark for Txchya aesthetics
    })();

    if (theme === 'light') {
      document.documentElement.classList.remove('dark');
    } else {
      document.documentElement.classList.add('dark');
    }

    window.localStorage.setItem('theme', theme);
  </script>
</head>
<body class="bg-[var(--bg-color)] text-[var(--text-color)]">
  <div class="scanline"></div>
  
  <slot />

  <!-- Global Theme Toggle -->
  <button 
    id="globalThemeToggle" 
    class="fixed bottom-6 right-6 z-[9999] w-14 h-14 rounded-full border-2 border-indigo-500/50 bg-black/80 backdrop-blur-md shadow-[0_0_20px_rgba(79,70,229,0.3)] flex items-center justify-center text-2xl transition-all hover:scale-110 active:scale-95 group overflow-hidden"
    title="Switch Aesthetic"
  >
     <div class="absolute inset-0 bg-indigo-500/10 group-hover:bg-indigo-500/20 transition-colors"></div>
     <span class="relative z-10 filter drop-shadow-md">ðŸŒ“</span>
  </button>

  <script is:inline>
    document.getElementById('globalThemeToggle')?.addEventListener('click', () => {
      const isDark = document.documentElement.classList.contains('dark');
      if (isDark) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('theme', 'dark');
      }
      // Immediate reload or dynamic update handles the transition
    });
  </script>
</body>
</html>