---
const title = Astro.props.title || "Txchya | Cyberpunk Ambient Artist";
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  
  <!-- Cyberpunk Meta Tags -->
  <meta name="theme-color" content="#000000">
  <meta name="description" content="Txchya - Cyberpunk Ambient AI Music Artist. Stream 'Vibe Coding' album on all platforms.">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;700;900&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Global CSS -->
  <link rel="stylesheet" href="/styles/global.css">
</head>
<body class="font-inter bg-black text-white overflow-x-hidden">
  <slot />
  
  <!-- Cyberpunk Background Effects -->
  <div class="fixed inset-0 pointer-events-none z-[-1] overflow-hidden">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 rounded-full bg-purple-500/10 blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 rounded-full bg-cyan-500/10 blur-3xl animate-pulse delay-1000"></div>
    
    <!-- Grid overlay -->
    <div class="absolute inset-0 opacity-10" style="
      background-image: 
        linear-gradient(rgba(0, 255, 255, 0.3) 1px, transparent 1px),
        linear-gradient(90deg, rgba(0, 255, 255, 0.3) 1px, transparent 1px);
      background-size: 50px 50px;
    "></div>
  </div>
</body>
</html>