      </div>
    </div>
    
    <!-- Player Controls -->
    <div class="controls-section">
      <div class="now-playing">
        <div class="track-info">
          <h3 class="track-title" id="trackTitle">Select a Track</h3>
          <p class="track-artist">Txchya ‚Ä¢ Galaxy üéπ</p>
        </div>
        
        <!-- Listener Counter -->
        <div class="listener-counter">
          <div class="counter-icon">üë•</div>
          <div class="counter-text">
