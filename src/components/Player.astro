          </div>
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  // Track data matching your MP3 filenames
  const tracks = [
    { number: '01', title: 'Night Protocol', duration: '7:33', file: '/music/night-protocol.mp3' },
    { number: '02', title: 'Neon Cyber Alley', duration: '5:54', file: '/music/neon-cyber-alley.mp3' },
    { number: '03', title: 'Rain on Chrome', duration: '3:43', file: '/music/rain-on-chrome.mp3' },
    { number: '04', title: 'Skyline Ascension', duration: '7:50', file: '/music/skyline-ascension.mp3' },
    { number: '05', title: 'Signal in the Noise', duration: '7:28', file: '/music/signal-in-the-noise.mp3' },
    { number: '06', title: 'Ghost in the Circuit', duration: '5:07', file: '/music/ghost-in-the-circuit.mp3' },
    { number: '07', title: 'All Time High (ATH)', duration: '3:41', file: '/music/all-time-high.mp3' },
    { number: '08', title: 'Destiny', duration: '5:25', file: '/music/destiny.mp3' },
    { number: '09', title: 'Coded Dimension', duration: '3:10', file: '/music/coded-dimension.mp3' },
    { number: '10', title: 'Vibe Coded', duration: '4:29', file: '/music/vibe-coded.mp3' },
    { number: '11', title: 'Endless Fall', duration: '3:54', file: '/music/endless-fall.mp3' }
  ];

  // Audio setup
  const audio = new Audio();
  let currentTrackIndex = 0;
  let isPlaying = false;
  let isShuffled = false;
  let isRepeating = false;

  // DOM Elements
  const trackTitle = document.getElementById('trackTitle');
  const currentTimeEl = document.getElementById('currentTime');
  const durationEl = document.getElementById('duration');
  const progressFill = document.getElementById('progressFill');
  const playBtn = document.getElementById('playBtn');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const shuffleBtn = document.getElementById('shuffleBtn');
  const repeatBtn = document.getElementById('repeatBtn');
  const volumeSlider = document.getElementById('volumeSlider');
  const listenerCount = document.getElementById('listenerCount');
  const playIcon = playBtn?.querySelector('.play-icon');
  const pauseIcon = playBtn?.querySelector('.pause-icon');

  // Format time (seconds to MM:SS)
  function formatTime(seconds) {
    const mins = Math.floor(seconds / 60);
    const secs = Math.floor(seconds % 60);
    return `${mins}:${secs.toString().padStart(2, '0')}`;
  }

  // Load and play track
  function loadTrack(index) {
    if (index < 0) index = tracks.length - 1;
    if (index >= tracks.length) index = 0;
    
    currentTrackIndex = index;
    const track = tracks[index];
    
    audio.src = track.file;
    trackTitle.textContent = track.title;
    durationEl.textContent = track.duration;
    
    // Update active track in list
    document.querySelectorAll('.track-item').forEach((item, i) => {
      item.classList.toggle('active', i === index);
    });
    
    // Update hotspots
    document.querySelectorAll('.hotspot').forEach((hotspot, i) => {
      hotspot.classList.toggle('active', i === index);
    });
    
    // If already playing, continue playing
    if (isPlaying) {
      audio.play().catch(e => console.log('Playback failed:', e));
    }
  }

  // Play/pause toggle
  function togglePlay() {
    if (isPlaying) {
      audio.pause();
      if (playIcon) playIcon.style.display = 'block';
      if (pauseIcon) pauseIcon.style.display = 'none';
    } else {
      audio.play().catch(e => {
        console.log('Playback error:', e);
        // If no track loaded yet, load first track
        if (!audio.src) {
          loadTrack(0);
          audio.play();
        }
      });
      if (playIcon) playIcon.style.display = 'none';
      if (pauseIcon) pauseIcon.style.display = 'block';
    }
    isPlaying = !isPlaying;
  }

  // Update progress bar
  function updateProgress() {
    if (!isNaN(audio.duration)) {
      const progress = (audio.currentTime / audio.duration) * 100;
      progressFill.style.width = `${progress}%`;
      currentTimeEl.textContent = formatTime(audio.currentTime);
    }
  }

  // Simulate listener count
  function updateListenerCount() {
    const base = 1247;
    const change = Math.floor(Math.random() * 21) - 10;
    const newCount = Math.max(1000, base + change);
    listenerCount.textContent = newCount.toLocaleString();
    
    // Add pulse animation
    listenerCount.classList.add('pulse');
    setTimeout(() => listenerCount.classList.remove('pulse'), 300);
  }

  // Event listeners
  function initializePlayer() {
    // Play/Pause
    if (playBtn) {
      playBtn.addEventListener('click', togglePlay);
    }
    
    // Previous/Next
    if (prevBtn) {
      prevBtn.addEventListener('click', () => {
        loadTrack(currentTrackIndex - 1);
        if (isPlaying) audio.play();
      });
    }
    
    if (nextBtn) {
      nextBtn.addEventListener('click', () => {
        loadTrack(currentTrackIndex + 1);
        if (isPlaying) audio.play();
      });
    }
    
    // Shuffle/Repeat
    if (shuffleBtn) {
      shuffleBtn.addEventListener('click', () => {
        isShuffled = !isShuffled;
        shuffleBtn.classList.toggle('active', isShuffled);
      });
    }
    
    if (repeatBtn) {
      repeatBtn.addEventListener('click', () => {
        isRepeating = !isRepeating;
        repeatBtn.classList.toggle('active', isRepeating);
      });
    }
    
    // Volume
    if (volumeSlider) {
      volumeSlider.addEventListener('input', (e) => {
        audio.volume = e.target.value / 100;
        document.querySelector('.volume-percent').textContent = `${e.target.value}%`;
      });
    }
    
    // Hotspots
    document.querySelectorAll('.hotspot').forEach((hotspot, index) => {
      hotspot.addEventListener('click', () => {
        loadTrack(index);
        if (!isPlaying) togglePlay();
      });
    });
    
    // Track list items
    document.querySelectorAll('.track-item').forEach((item, index) => {
      item.addEventListener('click', () => {
        loadTrack(index);
        if (!isPlaying) togglePlay();
      });
    });
    
    // Audio events
    audio.addEventListener('timeupdate', updateProgress);
    audio.addEventListener('ended', () => {
      if (isRepeating) {
        audio.currentTime = 0;
        audio.play();
      } else if (isShuffled) {
        loadTrack(Math.floor(Math.random() * tracks.length));
        audio.play();
      } else {
        loadTrack(currentTrackIndex + 1);
        if (isPlaying) audio.play();
      }
    });
    
    // Initialize with first track
    loadTrack(0);
    audio.volume = 0.7;
    
    // Update listener count every 30 seconds
    setInterval(updateListenerCount, 30000);
    updateListenerCount();
    
    // Global playTrack function for onclick handlers
    window.playTrack = function(index) {
      loadTrack(index);
      if (!isPlaying) togglePlay();
    };
  }

  // Initialize when DOM is ready
  if (typeof window !== 'undefined') {
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initializePlayer);
    } else {
      initializePlayer();
    }
  }
</script>

<style>
  /* Cyberpunk Player Styles */
  .cyberpunk-player {
    background: linear-gradient(135deg, 
      rgba(0,0,0,0.9) 0%, 
      rgba(20,0,40,0.95) 100%);
    border: 2px solid rgba(255,0,255,0.4);
    border-radius: 24px;
    padding: 30px;
    backdrop-filter: blur(20px);
    position: relative;
    overflow: hidden;
    box-shadow: 
      0 20px 40px rgba(0,0,0,0.5),
      0 0 100px rgba(255,0,255,0.1) inset,
      0 0 30px rgba(0,255,255,0.1) inset;
  }

  .cyberpunk-player::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, 
      transparent, 
      #ff00ff, 
      #9d00ff, 
      #00ffff, 
      transparent);
    animation: scanline 4s linear infinite;
  }

  .player-container {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: 40px;
    align-items: start;
  }

  .album-art-wrapper {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    border: 3px solid rgba(0,255,255,0.3);
    box-shadow: 
      0 10px 30px rgba(0,0,0,0.5),
      0 0 50px rgba(255,0,255,0.3);
    transform-style: preserve-3d;
    perspective: 1000px;
  }

  .album-cover {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }

  .album-art-wrapper:hover .album-cover {
    transform: scale(1.05) rotateY(5deg);
  }

  .hotspot-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .hotspot {
    position: absolute;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255,0,255,0.2);
    border: 2px solid rgba(0,255,255,0.8);
    cursor: pointer;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: auto;
    z-index: 10;
  }

  .hotspot:hover, .hotspot.active {
    background: rgba(255,0,255,0.6);
    border-color: #ff00ff;
    box-shadow: 
      0 0 20px #ff00ff,
      0 0 40px rgba(255,0,255,0.5);
    transform: translate(-50%, -50%) scale(1.3);
  }

  .hotspot-pulse {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    animation: pulse 2s infinite;
    border: 2px solid rgba(0,255,255,0.6);
  }

  .hotspot-number {
    color: white;
    font-size: 14px;
    font-weight: bold;
    font-family: 'Orbitron', monospace;
    position: relative;
    z-index: 2;
  }

  .controls-section {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .now-playing {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 20px;
    border-bottom: 2px solid rgba(255,0,255,0.2);
  }

  .track-info {
    flex: 1;
  }

  .track-title {
    font-size: 32px;
    font-weight: 900;
    font-family: 'Orbitron', sans-serif;
    background: linear-gradient(90deg, #ff00ff, #9d00ff, #00ffff);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    margin-bottom: 8px;
    letter-spacing: 1px;
    text-shadow: 0 0 10px rgba(255,0,255,0.3);
  }

  .track-artist {
    color: rgba(255,255,255,0.7);
    font-size: 16px;
