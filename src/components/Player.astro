---

<div class="cyberpunk-player">
  <!-- Player Controls -->
  <div class="player-container">
    <!-- Album Art with Hotspots -->
    <div class="album-art-wrapper">
      <img 
        src="/VibeCoding-album.png" 
        alt="Vibe Coding Album Cover" 
        class="album-cover"
      />
      <div class="hotspot-overlay">
        <!-- Interactive hotspots for each track -->
        {Array.from({ length: 11 }).map((_, index) => (
          <button 
            class="hotspot" 
            style={{
              left: `${20 + (index % 4) * 20}%`,
              top: `${20 + Math.floor(index / 4) * 25}%`
            }}
            data-track={index}
            aria-label={`Preview track ${index + 1}`}
