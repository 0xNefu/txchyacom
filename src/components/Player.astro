        <button class="play-btn" id="playBtn" title="Play/Pause">
          <span class="play-icon">‚ñ∂</span>
          <span class="pause-icon">‚è∏</span>
        </button>
        <button class="control-btn" id="nextBtn" title="Next">
          ‚è≠
        </button>
        
        <button class="control-btn" id="shuffleBtn" title="Shuffle">
          üîÄ
        </button>
        <button class="control-btn" id="repeatBtn" title="Repeat">
          üîÅ
        </button>
      </div>
      
      <!-- Volume Control -->
      <div class="volume-control">
        <span class="volume-icon">üîä</span>
        <input type="range" id="volumeSlider" min="0" max="100" value="70" class="volume-slider" />
        <span class="volume-percent">70%</span>
      </div>
      
      <!-- Track List -->
      <div class="track-list">
        {[
          { number: '01', title: 'Night Protocol', duration: '7:33' },
          { number: '02', title: 'Neon Cyber Alley', duration: '5:54' },
          { number: '03', title: 'Rain on Chrome', duration: '3:43' },
          { number: '04', title: 'Skyline Ascension', duration: '7:50' },
          { number: '05', title: 'Signal in the Noise', duration: '7:28' },
          { number: '06', title: 'Ghost in the Circuit', duration: '5:07' },
          { number: '07', title: 'All Time High (ATH)', duration: '3:41' },
          { number: '08', title: 'Destiny', duration: '5:25' },
          { number: '09', title: 'Coded Dimension', duration: '3:10' },
          { number: '10', title: 'Vibe Coded', duration: '4:29' },
          { number: '11', title: 'Endless Fall', duration: '3:54' }
        ].map((track, index) => (
          <div 
            class="track-item" 
            data-track={index}
            onclick={`playTrack(${index})`}
          >
            <span class="track-number">{track.number}</span>
            <span class="track-name">{track.title}</span>
            <span class="track-duration">{track.duration}</span>
